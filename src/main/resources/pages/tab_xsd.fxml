<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>
<VBox AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0"
      xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.fxt.freexmltoolkit.controller.XsdController">
    <HBox>
        <HBox styleClass="xml">
            <Button fx:id="newFile" contentDisplay="TOP" styleClass="big_button" text="_new File">
                <graphic>
                    <FontIcon iconColor="black" iconLiteral="bi-file-earmark"/>
                </graphic>
            </Button>
            <Button fx:id="openFile" onAction="#loadXsdFile" contentDisplay="TOP" styleClass="big_button"
                    text="_open File">
                <graphic>
                    <FontIcon iconColor="black" iconLiteral="bi-folder2-open"/>
                </graphic>
            </Button>
            <Button fx:id="saveFile" contentDisplay="TOP" styleClass="big_button" text="_save File">
                <graphic>
                    <FontIcon iconLiteral="bi-hdd"/>
                </graphic>
            </Button>

            <Button fx:id="prettyPrint" contentDisplay="TOP" styleClass="big_button" text="_format Text"
                    ButtonBar.buttonData="RIGHT">
                <graphic>
                    <FontIcon iconColor="darkorange" iconLiteral="fth-align-center"/>
                </graphic>
            </Button>
        </HBox>
        <HBox styleClass="xml">
            <Separator orientation="VERTICAL"/>
            <Button fx:id="validateSchema" contentDisplay="TOP" styleClass="big_button" text="validate Schema"
                    ButtonBar.buttonData="RIGHT">
                <graphic>
                    <FontIcon iconLiteral="win10-checked"/>
                </graphic>
            </Button>
        </HBox>
        <HBox fx:id="test" styleClass="xml" visible="false">
            <Separator orientation="VERTICAL"/>
            <Button contentDisplay="TOP" onAction="#test" styleClass="big_button" text="test"
                    ButtonBar.buttonData="RIGHT">
                <graphic>
                    <FontIcon iconLiteral="win10-checked"/>
                </graphic>
            </Button>
        </HBox>
        <HBox>
            <padding>
                <Insets left="10.0"/>
            </padding>
            <VBox alignment="CENTER_LEFT">
                <Label text="Notification:"/>
                <Label fx:id="schemaValidText" text="xxx"/>
            </VBox>
        </HBox>
    </HBox>

    <TabPane VBox.vgrow="ALWAYS">
        <Tab closable="false" text="Text">
            <graphic>
                <FontIcon iconLiteral="bi-card-text"/>
            </graphic>
            <StackPane fx:id="stackPane" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
                       AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0"/>
        </Tab>
        <Tab closable="false" disable="true" text="Graphic">
            <graphic>
                <FontIcon iconLiteral="bi-diagram-2"/>
            </graphic>
        </Tab>
        <Tab closable="false" text="Documentation">
            <graphic>
                <FontIcon iconLiteral="win10-notebook" iconSize="16"/>
            </graphic>
            <VBox style="-fx-padding: 10px;">
                <GridPane hgap="10" vgap="10">
                    <Label GridPane.rowIndex="0" GridPane.columnIndex="0" text="XSD File: "/>
                    <HBox GridPane.rowIndex="0" GridPane.columnIndex="1">
                        <TextField fx:id="xsdFilePath" text="XSD File"/>
                        <Button onAction="#loadXsdFile">
                            <graphic>
                                <FontIcon iconColor="#c9c830" iconLiteral="bi-folder2-open"/>
                            </graphic>
                        </Button>
                    </HBox>

                    <Label GridPane.rowIndex="1" GridPane.columnIndex="0" text="Output Folder"/>
                    <HBox GridPane.rowIndex="1" GridPane.columnIndex="1">
                        <TextField fx:id="documentationOutputDirPath" text="File..."/>
                        <Button onAction="#openOutputFolderDialog">
                            <graphic>
                                <FontIcon iconColor="#c9c830" iconLiteral="bi-folder2-open"/>
                            </graphic>
                        </Button>
                    </HBox>

                    <Label GridPane.rowIndex="2" GridPane.columnIndex="0" text="Output Format"/>
                    <HBox GridPane.rowIndex="2" GridPane.columnIndex="1">
                        <RadioButton/>
                        <Label>HTML</Label>
                    </HBox>

                    <Label GridPane.rowIndex="3" GridPane.columnIndex="0" text="open file after creation:"/>
                    <CheckBox fx:id="openFileAfterCreation" selected="true" GridPane.rowIndex="3"
                              GridPane.columnIndex="1"/>

                    <Button GridPane.rowIndex="4" GridPane.columnIndex="1" onAction="#generateDocumentation"
                            text="generate">
                        <graphic>
                            <FontIcon iconColor="#45d81f" iconLiteral="bi-caret-right-fill"/>
                        </graphic>
                    </Button>

                </GridPane>
                <ProgressBar fx:id="pbDocumentation"/>
                <Label fx:id="statusText"/>

                <Button onAction="#test" text="test"/>
            </VBox>
        </Tab>
        <Tab closable="false" text="generate Example data">
            <graphic>
                <FontIcon iconLiteral="bi-keyboard" iconSize="16"/>
            </graphic>
            <TextArea fx:id="sampleData" HBox.hgrow="ALWAYS"/>
        </Tab>
    </TabPane>
</VBox>
