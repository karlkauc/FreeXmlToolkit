<VBox AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0"
      xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.fxt.freexmltoolkit.controller.XsdController">
    <HBox>
        <HBox styleClass="xml">
            <Button fx:id="newFile" contentDisplay="TOP" text="_new File">
                <graphic>
                    <FontIcon iconColor="black" iconLiteral="bi-file-earmark"/>
                </graphic>
            </Button>
            <Button fx:id="openFile" contentDisplay="TOP" text="_open File">
                <graphic>
                    <FontIcon iconColor="black" iconLiteral="bi-folder2-open"/>
                </graphic>
            </Button>
            <Button fx:id="saveFile" contentDisplay="TOP" text="_save File">
                <graphic>
                    <FontIcon iconLiteral="bi-hdd"/>
                </graphic>
            </Button>

            <Button fx:id="prettyPrint" contentDisplay="TOP" text="_format Text"
                    ButtonBar.buttonData="RIGHT">
                <graphic>
                    <FontIcon iconColor="darkorange" iconLiteral="fth-align-center"/>
                </graphic>
            </Button>
            <Separator orientation="VERTICAL"/>

            <Separator orientation="VERTICAL"/>
            <TextField prefHeight="16.0" prefWidth="200.0" promptText="search..."/>
        </HBox>
        <HBox styleClass="xml">
            <Separator orientation="VERTICAL"/>
            <Button fx:id="validateSchema" contentDisplay="TOP" text="validate Schema"
                    ButtonBar.buttonData="RIGHT">
                <graphic>
                    <FontIcon iconLiteral="win10-checked"/>
                </graphic>
            </Button>
        </HBox>
        <HBox fx:id="test" styleClass="xml" visible="false">
            <Separator orientation="VERTICAL"/>
            <Button contentDisplay="TOP" onAction="#test" text="test" ButtonBar.buttonData="RIGHT">
                <graphic>
                    <FontIcon iconLiteral="win10-checked"/>
                </graphic>
            </Button>
            <!-- <Button onAction="#test" text="TEST"/> -->
        </HBox>
        <HBox>
            <padding>
                <Insets left="10.0"/>
            </padding>
            <VBox alignment="CENTER_LEFT">
                <children>
                    <Label text="Notification:"/>
                    <Label fx:id="schemaValidText" text="xxx"/>
                </children>
            </VBox>
        </HBox>

    </HBox>

    <TabPane VBox.vgrow="ALWAYS">
        <Tab text="Text" closable="false">
            <graphic>
                <FontIcon iconLiteral="bi-card-text"/>
            </graphic>
            <StackPane fx:id="stackPane"
                       AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                       AnchorPane.bottomAnchor="0" AnchorPane.topAnchor="0"
            />
        </Tab>
        <Tab text="Graphic" closable="false" disable="true">
            <graphic>
                <FontIcon iconLiteral="bi-diagram-2"/>
            </graphic>
        </Tab>
        <Tab text="Documentation" closable="false">
            <graphic>
                <FontIcon iconLiteral="win10-notebook" iconSize="16"/>
            </graphic>
            <HBox>
                <VBox>
                    <Button text="generate" onAction="#generateDocumentation"/>
                    <Button text="test" onAction="#test"/>
                </VBox>
                <TextArea fx:id="documentation" HBox.hgrow="ALWAYS"/>
            </HBox>
        </Tab>
        <Tab text="generate Example data" closable="false">
            <graphic>
                <FontIcon iconLiteral="bi-keyboard" iconSize="16"/>
            </graphic>
            <TextArea fx:id="sampleData" HBox.hgrow="ALWAYS"/>
        </Tab>
    </TabPane>
</VBox>

