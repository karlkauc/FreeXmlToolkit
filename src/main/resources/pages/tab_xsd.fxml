<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>
<?import java.lang.String?>
<VBox AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0"
      xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.fxt.freexmltoolkit.controller.XsdController">

    <TabPane fx:id="tabPane" VBox.vgrow="ALWAYS">
        <Tab closable="false" text="Text">
            <graphic>
                <FontIcon iconLiteral="bi-card-text"/>
            </graphic>
            <StackPane fx:id="stackPane" style="-fx-background-color: white;" AnchorPane.bottomAnchor="0"
                       AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0"/>
        </Tab>
        <Tab closable="false" disable="true" text="Graphic">
            <graphic>
                <FontIcon iconLiteral="bi-diagram-2"/>
            </graphic>
        </Tab>
        <Tab fx:id="documentation" closable="false" text="Documentation">
            <graphic>
                <FontIcon iconLiteral="win10-notebook" iconSize="16"/>
            </graphic>
            <VBox style="-fx-padding: 20px; -fx-background-color: white;">
                <GridPane hgap="10" vgap="10">
                    <Label text="XSD File: " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <HBox GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <TextField text="XSD File" fx:id="xsdFilePath"/>
                        <Button onAction="#loadXsdFile">
                            <graphic>
                                <FontIcon iconColor="#c9c830" iconLiteral="bi-folder2-open"/>
                            </graphic>
                        </Button>
                    </HBox>

                    <Label text="Output Folder" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <HBox GridPane.columnIndex="1" GridPane.rowIndex="1">
                        <TextField fx:id="documentationOutputDirPath" text="File..."/>
                        <Button onAction="#openOutputFolderDialog">
                            <graphic>
                                <FontIcon iconColor="#c9c830" iconLiteral="bi-folder2-open"/>
                            </graphic>
                        </Button>
                    </HBox>

                    <Label text="Output Format" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <HBox GridPane.columnIndex="1" GridPane.rowIndex="2">
                        <RadioButton selected="true" text="HTML"/>
                        <RadioButton disable="true" text="Word"/>
                        <RadioButton disable="true" text="PDF"/>
                    </HBox>

                    <Label text="use Markdown Renderer" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <CheckBox fx:id="useMarkdownRenderer" selected="true" GridPane.columnIndex="1"
                              GridPane.rowIndex="3"/>

                    <Label text="open file after creation" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <CheckBox fx:id="openFileAfterCreation" selected="true" GridPane.columnIndex="1"
                              GridPane.rowIndex="4"/>

                    <Label text="create Example data if missing" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                    <CheckBox fx:id="createExampleData" disable="true" selected="true" GridPane.columnIndex="1"
                              GridPane.rowIndex="5"/>

                    <Label text="restrict to language" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                    <TextField GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                    <!--  pattern: [a-zA-Z]{1,8}(-[a-zA-Z0-9]{1,8})* -->

                    <Label text="Grafik format" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
                    <ChoiceBox fx:id="grafikFormat" disable="true" value="SVG" GridPane.columnIndex="1"
                               GridPane.rowIndex="7">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="SVG"/>
                                <String fx:value="PNG"/>
                                <String fx:value="JPG"/>
                            </FXCollections>
                        </items>
                    </ChoiceBox>

                    <Button onAction="#generateDocumentation" text="generate" GridPane.columnIndex="1"
                            GridPane.rowIndex="8">
                        <graphic>
                            <FontIcon iconColor="#45d81f" iconLiteral="bi-caret-right-fill"/>
                        </graphic>
                    </Button>
                    <columnConstraints>
                        <ColumnConstraints/>
                        <ColumnConstraints/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints/>
                        <RowConstraints/>
                        <RowConstraints/>
                        <RowConstraints/>
                        <RowConstraints/>
                        <RowConstraints/>
                        <RowConstraints/>
                        <RowConstraints/>
                        <RowConstraints/>
                    </rowConstraints>
                </GridPane>
                <Label fx:id="statusText" styleClass="h3" text="Status..."/>
                <ProgressIndicator fx:id="progressDocumentation" minHeight="100" minWidth="100" visible="false"
                                   VBox.vgrow="ALWAYS"/>
                <Button fx:id="openDocFolder" disable="true" text="Open Folder">
                    <graphic>
                        <FontIcon iconColor="#c9c830" iconLiteral="bi-folder2-open"/>
                    </graphic>
                </Button>

                <Button onAction="#test" text="test"/>
            </VBox>
        </Tab>
        <Tab closable="false" text="generate Example data">
            <graphic>
                <FontIcon iconLiteral="bi-keyboard" iconSize="16"/>
            </graphic>
            <TextArea fx:id="sampleData" HBox.hgrow="ALWAYS"/>
        </Tab>
    </TabPane>
</VBox>
