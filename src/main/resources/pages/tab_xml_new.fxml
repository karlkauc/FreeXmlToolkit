<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<?import org.kordamp.ikonli.javafx.*?>
<VBox prefHeight="768.0" prefWidth="1024.0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
      AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" xmlns="http://javafx.com/javafx/11.0.14-internal"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.fxt.freexmltoolkit.controller.XmlNewController">
    <!-- Note: Stylesheets will be applied via CSS classes instead -->

    <!-- Enhanced XML Editor with Modern UI -->
    <HBox styleClass="xml-toolbar" spacing="5" alignment="CENTER_LEFT">
        <padding>
            <Insets top="8" bottom="8" left="10" right="10"/>
        </padding>

        <!-- File Operations (existing fx:id elements) -->
        <Button fx:id="newFile" contentDisplay="TOP" onAction="#newFilePressed" text="New">
            <graphic>
                <FontIcon iconColor="#28a745" iconLiteral="bi-file-earmark" iconSize="16"/>
            </graphic>
        </Button>

        <Button fx:id="openFile" contentDisplay="TOP" onAction="#openFile" text="Open">
            <graphic>
                <FontIcon iconColor="#007bff" iconLiteral="bi-folder2-open" iconSize="16"/>
            </graphic>
        </Button>

        <Button fx:id="saveFile" contentDisplay="TOP" onAction="#saveFile" text="Save">
            <graphic>
                <FontIcon iconColor="#17a2b8" iconLiteral="bi-hdd" iconSize="16"/>
            </graphic>
        </Button>

        <Separator orientation="VERTICAL" prefHeight="25"/>

        <Button fx:id="prettyPrint" contentDisplay="TOP" onAction="#prettifyingXmlText" text="Format">
            <graphic>
                <FontIcon iconColor="#fd7e14" iconLiteral="bi-justify" iconSize="16"/>
            </graphic>
        </Button>

        <Button fx:id="minifyButton" contentDisplay="TOP" onAction="#minifyXmlText" text="Minify">
            <graphic>
                <FontIcon iconColor="#6c757d" iconLiteral="bi-layout-text-window-reverse" iconSize="16"/>
            </graphic>
        </Button>

        <Separator orientation="VERTICAL" prefHeight="25"/>

        <Button fx:id="runXpathQuery" contentDisplay="TOP" onAction="#runXpathQueryPressed" text="XPath">
            <graphic>
                <FontIcon iconColor="#6f42c1" iconLiteral="bi-code-slash" iconSize="16"/>
            </graphic>
        </Button>

        <Separator orientation="VERTICAL" prefHeight="25"/>

        <!-- New Revolutionary Features -->
        <Button fx:id="templateManagerButton" contentDisplay="TOP" onAction="#showTemplateManager" text="Templates">
            <graphic>
                <FontIcon iconColor="#28a745" iconLiteral="bi-file-text" iconSize="16"/>
            </graphic>
        </Button>

        <Button fx:id="schemaGeneratorButton" contentDisplay="TOP" onAction="#showSchemaGenerator" text="Schema">
            <graphic>
                <FontIcon iconColor="#dc3545" iconLiteral="bi-diagram-3" iconSize="16"/>
            </graphic>
        </Button>

        <Button fx:id="xsltDeveloperButton" contentDisplay="TOP" onAction="#showXsltDeveloper" text="XSLT">
            <graphic>
                <FontIcon iconColor="#fd7e14" iconLiteral="bi-arrow-repeat" iconSize="16"/>
            </graphic>
        </Button>
    </HBox>

    <!-- Main Content Area -->
    <SplitPane VBox.vgrow="ALWAYS" dividerPositions="0.75" styleClass="xml-split-pane">
        <!-- Left Panel: Editor Tabs (existing fx:id) -->
        <TabPane fx:id="xmlFilesPane" side="TOP" SplitPane.resizableWithParent="true"
                 styleClass="xml-editor-tabs"/>

        <!-- Right Panel: Sidebar with Static Content (no fx:id) -->
        <VBox spacing="5" minWidth="250" maxWidth="450" prefWidth="350" styleClass="xml-sidebar">
            <padding>
                <Insets top="10" bottom="10" left="10" right="10"/>
            </padding>

            <!-- Document Outline -->
            <TitledPane text="Document Outline" expanded="true" collapsible="true" styleClass="sidebar-section">
                <VBox spacing="5">
                    <Label text="XML structure and navigation" styleClass="section-description"/>
                    <TreeView prefHeight="150" styleClass="xml-structure-tree"/>
                </VBox>
            </TitledPane>

            <!-- Validation Results -->
            <TitledPane text="Validation Results" expanded="false" collapsible="true" styleClass="sidebar-section">
                <VBox spacing="8">
                    <HBox spacing="5" alignment="CENTER_LEFT">
                        <Label text="Schema:" styleClass="section-label"/>
                        <ComboBox prefWidth="120" promptText="Select schema" styleClass="xml-combo-box"/>
                    </HBox>
                    <ListView prefHeight="100" styleClass="xml-list-view"/>
                </VBox>
            </TitledPane>

            <!-- Properties -->
            <TitledPane text="Properties" expanded="false" collapsible="true" styleClass="sidebar-section">
                <VBox spacing="5">
                    <Label text="Element properties and attributes" styleClass="section-description"/>
                    <TableView prefHeight="120" styleClass="xml-properties-table"/>
                </VBox>
            </TitledPane>

            <!-- Namespaces -->
            <TitledPane text="Namespaces" expanded="false" collapsible="true" styleClass="sidebar-section">
                <VBox spacing="5">
                    <Label text="Document namespaces" styleClass="section-description"/>
                    <ListView prefHeight="80" styleClass="xml-list-view"/>
                </VBox>
            </TitledPane>

            <!-- Smart Templates Panel -->
            <TitledPane fx:id="templatesPanel" text="Smart Templates" expanded="false" collapsible="true"
                        styleClass="sidebar-section">
                <VBox spacing="8">
                    <HBox spacing="5" alignment="CENTER_LEFT">
                        <ComboBox fx:id="templateCategoryCombo" prefWidth="120" promptText="Category"
                                  styleClass="xml-combo-box"/>
                        <Button fx:id="refreshTemplatesButton" onAction="#refreshTemplates">
                            <graphic>
                                <FontIcon iconLiteral="bi-arrow-clockwise" iconSize="12"/>
                            </graphic>
                        </Button>
                    </HBox>
                    <ListView fx:id="templatesListView" prefHeight="120" styleClass="xml-list-view"
                              onMouseClicked="#onTemplateSelected"/>
                    <HBox spacing="5">
                        <Button fx:id="applyTemplateButton" text="Apply" onAction="#applySelectedTemplate"
                                styleClass="btn-primary" prefWidth="60"/>
                        <Button fx:id="previewTemplateButton" text="Preview" onAction="#previewSelectedTemplate"
                                styleClass="btn-secondary" prefWidth="60"/>
                    </HBox>
                </VBox>
            </TitledPane>

            <!-- Schema Generation Panel -->
            <TitledPane fx:id="schemaPanel" text="Schema Generator" expanded="false" collapsible="true"
                        styleClass="sidebar-section" VBox.vgrow="ALWAYS">
                <VBox spacing="8">
                    <Label text="Generate XSD from current XML" styleClass="section-description"/>
                    <HBox spacing="5">
                        <CheckBox fx:id="inferTypesCheckbox" text="Infer Types" selected="true"/>
                        <CheckBox fx:id="flattenSchemaCheckbox" text="Flatten"/>
                    </HBox>
                    <HBox spacing="5">
                        <Button fx:id="generateSchemaButton" text="Generate" onAction="#generateSchema"
                                styleClass="btn-success" prefWidth="75"/>
                        <Button fx:id="exportSchemaButton" text="Export" onAction="#exportSchema" styleClass="btn-info"
                                prefWidth="60"/>
                    </HBox>
                    <TextArea fx:id="schemaPreviewArea" prefHeight="80" styleClass="code-preview" editable="false"
                              wrapText="false"/>
                </VBox>
            </TitledPane>
        </VBox>
    </SplitPane>

    <!-- Advanced Development Panels -->
    <TabPane fx:id="developmentTabPane" side="BOTTOM" tabClosingPolicy="SELECTED_TAB" prefHeight="200">
        <!-- XPath/XQuery Panel (existing fx:id elements) -->
        <Tab fx:id="xPathQueryTab" text="XPath / XQuery">
            <TabPane fx:id="xPathQueryPane" tabClosingPolicy="UNAVAILABLE" side="TOP">
                <Tab fx:id="xPathTab" text="XPath">
                    <StackPane fx:id="stackPaneXPath"/>
                </Tab>
                <Tab fx:id="xQueryTab" text="XQuery">
                    <StackPane fx:id="stackPaneXQuery"/>
                </Tab>
            </TabPane>
        </Tab>

        <!-- XSLT Development Panel -->
        <Tab fx:id="xsltDevelopmentTab" text="XSLT Development">
            <SplitPane dividerPositions="0.6" orientation="HORIZONTAL">
                <!-- XSLT Editor -->
                <VBox spacing="5">
                    <HBox spacing="5" alignment="CENTER_LEFT">
                        <Label text="XSLT Stylesheet:" styleClass="section-label"/>
                        <Button fx:id="loadXsltButton" text="Load" onAction="#loadXsltFile"/>
                        <Button fx:id="saveXsltButton" text="Save" onAction="#saveXsltFile"/>
                        <Separator orientation="VERTICAL"/>
                        <Button fx:id="transformButton" text="Transform" onAction="#executeTransformation"
                                styleClass="btn-primary"/>
                    </HBox>
                    <TextArea fx:id="xsltEditorArea" prefHeight="150" styleClass="code-editor" wrapText="false"/>
                </VBox>

                <!-- Transformation Results -->
                <VBox spacing="5">
                    <HBox spacing="5" alignment="CENTER_LEFT">
                        <Label text="Output:" styleClass="section-label"/>
                        <ComboBox fx:id="outputFormatCombo" prefWidth="80"/>
                        <CheckBox fx:id="livePreviewCheckbox" text="Live Preview"/>
                    </HBox>
                    <TabPane fx:id="transformationResultsPane" tabClosingPolicy="UNAVAILABLE">
                        <Tab text="Result">
                            <TextArea fx:id="transformationResultArea" styleClass="code-preview" editable="false"
                                      wrapText="false"/>
                        </Tab>
                        <Tab text="Preview">
                            <WebView fx:id="transformationPreviewWeb" prefHeight="150"/>
                        </Tab>
                        <Tab text="Performance">
                            <TextArea fx:id="performanceResultArea" styleClass="code-preview" editable="false"
                                      wrapText="true"/>
                        </Tab>
                    </TabPane>
                </VBox>
            </SplitPane>
        </Tab>

        <!-- Template Development Panel -->
        <Tab fx:id="templateDevelopmentTab" text="Template Development">
            <SplitPane dividerPositions="0.4" orientation="HORIZONTAL">
                <!-- Template Parameters -->
                <VBox spacing="5">
                    <HBox spacing="5" alignment="CENTER_LEFT">
                        <Label text="Template Parameters:" styleClass="section-label"/>
                        <Button fx:id="addParameterButton" onAction="#addTemplateParameter">
                            <graphic>
                                <FontIcon iconLiteral="bi-plus-circle" iconSize="12"/>
                            </graphic>
                        </Button>
                    </HBox>
                    <TableView fx:id="templateParametersTable" prefHeight="120">
                        <columns>
                            <TableColumn fx:id="parameterNameColumn" text="Name" prefWidth="80"/>
                            <TableColumn fx:id="parameterValueColumn" text="Value" prefWidth="100"/>
                            <TableColumn fx:id="parameterTypeColumn" text="Type" prefWidth="60"/>
                        </columns>
                    </TableView>
                    <HBox spacing="5">
                        <Button fx:id="validateParametersButton" text="Validate" onAction="#validateTemplateParameters"
                                styleClass="btn-warning"/>
                        <Button fx:id="resetParametersButton" text="Reset" onAction="#resetTemplateParameters"
                                styleClass="btn-secondary"/>
                    </HBox>
                </VBox>

                <!-- Template Preview -->
                <VBox spacing="5">
                    <HBox spacing="5" alignment="CENTER_LEFT">
                        <Label text="Generated XML:" styleClass="section-label"/>
                        <Button fx:id="generateTemplateButton" text="Generate" onAction="#generateTemplateXml"
                                styleClass="btn-success"/>
                        <Button fx:id="insertTemplateButton" text="Insert" onAction="#insertGeneratedTemplate"
                                styleClass="btn-primary"/>
                    </HBox>
                    <TextArea fx:id="templatePreviewArea" prefHeight="150" styleClass="code-preview" editable="false"
                              wrapText="false"/>
                </VBox>
            </SplitPane>
        </Tab>
    </TabPane>

</VBox>