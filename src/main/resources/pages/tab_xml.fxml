<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.fxt.freexmltoolkit.controls.XmlTreeView?>
<?import org.kordamp.ikonli.javafx.*?>
<VBox prefHeight="768.0" prefWidth="1024.0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
      AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" xmlns="http://javafx.com/javafx/11.0.14-internal"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.fxt.freexmltoolkit.controller.XmlController">
    <HBox>
        <HBox HBox.hgrow="ALWAYS">
            <Button fx:id="newFile" styleClass="button_pane_button">
                <graphic>
                    <FontIcon iconColor="black" iconLiteral="bi-file-earmark" iconSize="16"/>
                </graphic>
            </Button>

            <Button fx:id="openFile" onAction="#openFile" styleClass="button_pane_button">
                <graphic>
                    <FontIcon iconColor="black" iconLiteral="bi-folder2-open" iconSize="16"/>
                </graphic>
            </Button>
            <Button fx:id="saveFile" onAction="#saveCurrentChanges" styleClass="button_pane_button">
                <graphic>
                    <FontIcon iconLiteral="bi-hdd" iconSize="16"/>
                </graphic>
            </Button>

            <Button fx:id="prettyPrint" onAction="#formatXmlText" styleClass="button_pane_button"
                    ButtonBar.buttonData="RIGHT">
                <graphic>
                    <FontIcon iconColor="darkorange" iconLiteral="fth-align-center" iconSize="16"/>
                </graphic>
            </Button>
            <Button onAction="#moveDown" styleClass="button_pane_button">
                <graphic>
                    <FontIcon iconLiteral="bi-arrow-bar-down" iconSize="16"/>
                </graphic>
            </Button>
            <Button onAction="#moveUp" styleClass="button_pane_button">
                <graphic>
                    <FontIcon iconLiteral="bi-arrow-bar-up" iconSize="16"/>
                </graphic>
            </Button>
        </HBox>
        <HBox>
            <Button fx:id="validateSchema" onAction="#validateSchema" styleClass="button_pane_button"
                    ButtonBar.buttonData="RIGHT">
                <graphic>
                    <FontIcon iconLiteral="win10-checked" iconSize="16"/>
                </graphic>
            </Button>
        </HBox>
    </HBox>
    <SplitPane dividerPositions="0.9" orientation="VERTICAL" VBox.vgrow="ALWAYS">
        <TabPane VBox.vgrow="ALWAYS">
            <Tab closable="false" text="Text">
                <StackPane fx:id="stackPane" stylesheets="/css/xml-highlighting.css" AnchorPane.bottomAnchor="0"
                           AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0"/>
            </Tab>
            <Tab closable="false" text="Graphic">
                <XmlTreeView fx:id="xmlTreeView"/>
            </Tab>
        </TabPane>
        <HBox prefHeight="100">
            <VBox>
                <Button onAction="#evaluateXpath" text="XPath" fx:id="xpath"/>
                <Button onAction="#reloadXmlText" text="reload"/>
            </VBox>

            <TextArea text="/FundsXML4/ControlData" HBox.hgrow="ALWAYS" fx:id="xpathText"/>
        </HBox>
    </SplitPane>
</VBox>
