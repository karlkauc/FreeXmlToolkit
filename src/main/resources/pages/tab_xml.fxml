<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.fxt.freexmltoolkit.controller.XmlController"
      AnchorPane.bottomAnchor="0"
      AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
      AnchorPane.topAnchor="0">
    <HBox>
        <HBox VBox.vgrow="ALWAYS" prefHeight="20">
            <Button fx:id="newFile" styleClass="button_pane_button">
                <graphic>
                    <FontIcon iconLiteral="bi-file-earmark" iconSize="16" iconColor="black"/>
                </graphic>
            </Button>

            <Button fx:id="openFile" onAction="#openFile" styleClass="button_pane_button">
                <graphic>
                    <FontIcon iconLiteral="bi-folder2-open" iconSize="16" iconColor="black"/>
                </graphic>
            </Button>
            <Button fx:id="saveFile" styleClass="button_pane_button">
                <graphic>
                    <FontIcon iconLiteral="bi-hdd" iconSize="16"/>
                </graphic>
            </Button>

            <Button fx:id="prettyPrint" styleClass="button_pane_button"
                    ButtonBar.buttonData="RIGHT">
                <graphic>
                    <FontIcon iconLiteral="fth-align-center" iconSize="16" iconColor="darkorange"/>
                </graphic>
            </Button>
        </HBox>

    </HBox>
    <TabPane VBox.vgrow="ALWAYS">
        <Tab text="Text" closable="false">
            <StackPane fx:id="stackPane"
                       AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                       AnchorPane.bottomAnchor="0" AnchorPane.topAnchor="0"
                       stylesheets="@../css/xml-highlighting.css"/>
        </Tab>
        <Tab text="Graphic" closable="false" disable="true">

        </Tab>
    </TabPane>
    <HBox prefHeight="100">
        <TextArea fx:id="xpathText" HBox.hgrow="ALWAYS" text="/FundsXML4/ControlData"/>
        <VBox>
            <Button text="XPath" fx:id="xpath" onAction="#evaluateXpath"/>
            <Button text="reload" onAction="#reloadXmlText"/>
        </VBox>
    </HBox>
</VBox>

