<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<?import org.fxt.freexmltoolkit.controls.FileLoader?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<AnchorPane fx:id="anchorPane" style="-fx-padding: 5;" stylesheets="@../css/app.css"
            xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.fxt.freexmltoolkit.controller.XsltController">
    <HBox AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <BorderPane maxWidth="300" minWidth="300" prefWidth="300" style="-fx-padding: 0 5 0 0;" HBox.hgrow="ALWAYS">
            <top>
                <VBox>
                    <FileLoader fx:id="xmlFileLoader"/>
                    <Separator/>
                    <FileLoader fx:id="xsltFileLoader"/>
                    <Separator/>
                    <Button text="Reload" fx:id="reload" onAction="#checkFiles">
                        <graphic>
                            <ImageView fitHeight="20" fitWidth="20">
                                <Image url="@../img/icons8-aktualisieren-48.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                    <!--<Button text="TEST" onAction="#test" />-->
                </VBox>
            </top>
            <bottom>
                <ProgressBar fx:id="progressBar" prefWidth="300"/>
            </bottom>
        </BorderPane>

        <WebView fx:id="webView" HBox.hgrow="ALWAYS"/>
    </HBox>
</AnchorPane>
