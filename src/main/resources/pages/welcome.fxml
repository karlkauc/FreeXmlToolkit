<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>
<AnchorPane fx:id="rootPane" xmlns="http://javafx.com/javafx/11.0.14-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.fxt.freexmltoolkit.controller.WelcomeController"
            AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
            AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
    <children>
        <VBox spacing="20.0" styleClass="my_container"
              AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <children>
                <!-- Header Area -->
                <HBox VBox.vgrow="NEVER" alignment="CENTER">
                    <Label styleClass="h1" text="Welcome to FreeXmlToolkit!"/>
                </HBox>
                <HBox fx:id="versionUpdate" managed="false" spacing="5.0" visible="false">
                    <children>
                        <Label text="An update is available! Please check here:"/>
                        <Hyperlink onAction="#openUpdatePage" text="FreeXMLToolkit"/>
                    </children>
                </HBox>
                <Separator/>

                <!-- Main Features -->
                <Label styleClass="h2" text="Main Features"/>
                <GridPane hgap="20.0" vgap="20.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0"/>
                    </columnConstraints>

                    <children>
                        <!-- Feature: Advanced XML Editor -->
                        <VBox styleClass="feature-box" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="0"
                              onMouseClicked="#openXmlEditor" style="-fx-cursor: hand;">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <FontIcon iconColor="#4f46e5" iconLiteral="bi-file-earmark-code" iconSize="24"/>
                                    <Label styleClass="h3" text="XML Editor"/>
                                </HBox>
                                <Label text="Professional XML editing with IntelliSense auto-completion, XSD-aware suggestions, syntax highlighting, XPath/XQuery execution, and smart formatting."
                                       wrapText="true"/>
                            </children>
                        </VBox>

                        <!-- Feature: XSD Tools -->
                        <VBox styleClass="feature-box" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="0"
                              onMouseClicked="#openXsdTools" style="-fx-cursor: hand;">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <FontIcon iconColor="#16a34a" iconLiteral="bi-diagram-3" iconSize="24"/>
                                    <Label styleClass="h3" text="XSD Tools"/>
                                </HBox>
                                <Label text="Visual XSD editor with drag-and-drop, HTML documentation generator, schema flattening, sample data generation, and interactive diagrams."
                                       wrapText="true"/>
                            </children>
                        </VBox>

                        <!-- Feature: Schematron Validation -->
                        <VBox styleClass="feature-box" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="1"
                              onMouseClicked="#openSchematron" style="-fx-cursor: hand;">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <FontIcon iconColor="#be185d" iconLiteral="bi-shield-check" iconSize="24"/>
                                    <Label styleClass="h3" text="Schematron Validation"/>
                                </HBox>
                                <Label text="Validate XML using Schematron business rules with detailed error reporting, custom assertions, and advanced constraint validation beyond XSD."
                                       wrapText="true"/>
                            </children>
                        </VBox>

                        <!-- XSLT Developer -->
                        <VBox styleClass="feature-box" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1"
                              onMouseClicked="#openXsltDeveloper" style="-fx-cursor: hand;">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <FontIcon iconColor="#0284c7" iconLiteral="bi-arrow-repeat" iconSize="24"/>
                                    <Label styleClass="h3" text="XSLT 3.0 Developer"/>
                                </HBox>
                                <Label text="Transform XML documents with XSLT 3.0 support powered by Saxon HE, live preview, multiple output formats (HTML, XML, Text), and integrated debugging."
                                       wrapText="true"/>
                            </children>
                        </VBox>

                        <!-- FOP Processing -->
                        <VBox styleClass="feature-box" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="2"
                              onMouseClicked="#openFop" style="-fx-cursor: hand;">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <FontIcon iconColor="#ea580c" iconLiteral="bi-file-earmark-text" iconSize="24"/>
                                    <Label styleClass="h3" text="PDF Generation"/>
                                </HBox>
                                <Label text="Create professional PDF documents from XML using Apache FOP with XSL-FO stylesheets, custom formatting, and embedded graphics support."
                                       wrapText="true"/>
                            </children>
                        </VBox>

                        <!-- XML Digital Signature -->
                        <VBox styleClass="feature-box" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="2"
                              onMouseClicked="#openSignature" style="-fx-cursor: hand;">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <FontIcon iconColor="#7e22ce" iconLiteral="bi-patch-check-fill" iconSize="24"/>
                                    <Label styleClass="h3" text="XML Digital Signature"/>
                                </HBox>
                                <Label text="Sign and verify XML documents using XML-DSig standards with certificate management, signature validation, and cryptographic security features."
                                       wrapText="true"/>
                            </children>
                        </VBox>

                        <!-- Schema Generator -->
                        <VBox styleClass="feature-box" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="3"
                              onMouseClicked="#openSchemaGenerator" style="-fx-cursor: hand;">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <FontIcon iconColor="#059669" iconLiteral="bi-stars" iconSize="24"/>
                                    <Label styleClass="h3" text="Schema Generator"/>
                                </HBox>
                                <Label text="Automatically generate XSD schemas from XML sample files with intelligent type detection, structure analysis, and customizable output options."
                                       wrapText="true"/>
                            </children>
                        </VBox>

                        <!-- Help & Documentation -->
                        <VBox styleClass="feature-box" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="3"
                              onMouseClicked="#openHelp" style="-fx-cursor: hand;">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <FontIcon iconColor="#6366f1" iconLiteral="bi-question-circle" iconSize="24"/>
                                    <Label styleClass="h3" text="Help &amp; Documentation"/>
                                </HBox>
                                <Label text="Comprehensive user guide, keyboard shortcuts reference, tips and tricks, and links to online resources for learning XML technologies."
                                       wrapText="true"/>
                            </children>
                        </VBox>
                    </children>
                </GridPane>
                <!-- Spacer to push footer to bottom -->
                <Region VBox.vgrow="ALWAYS"/>

                <!-- Footer with version and usage time -->
                <Separator/>
                <HBox alignment="CENTER" spacing="30.0" style="-fx-padding: 10 0 0 0;">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <children>
                                <FontIcon iconLiteral="bi-info-circle" iconSize="14" iconColor="#6c757d"/>
                                <Label fx:id="versionLabel" text="Version: loading..."
                                       style="-fx-text-fill: #6c757d; -fx-font-size: 11px;"/>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <children>
                                <FontIcon iconLiteral="bi-clock" iconSize="14" iconColor="#6c757d"/>
                                <Label fx:id="durationLabel" text="Total usage time: loading..."
                                       style="-fx-text-fill: #6c757d; -fx-font-size: 11px;"/>
                            </children>
                        </HBox>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>