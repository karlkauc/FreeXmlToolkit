<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>
<AnchorPane xmlns="http://javafx.com/javafx/11.0.14-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.fxt.freexmltoolkit.controller.WelcomeController"
            AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
            AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
    <children>
        <VBox spacing="20.0" styleClass="my_container"
              AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
            <children>
                <!-- Header Area -->
                <HBox VBox.vgrow="NEVER" alignment="CENTER">
                    <Label styleClass="h1" text="Welcome to FreeXmlToolkit!"/>
                </HBox>
                <VBox spacing="5.0">
                    <children>
                        <Label fx:id="versionLabel" text="Version: loading..."/>
                        <Label fx:id="durationLabel" text="Total usage time: loading..."/>
                    </children>
                </VBox>
                <HBox fx:id="versionUpdate" managed="false" spacing="5.0" visible="false">
                    <children>
                        <Label text="An update is available! Please check here:"/>
                        <Hyperlink onAction="#openUpdatePage" text="FreeXMLToolkit"/>
                    </children>
                </HBox>
                <Separator/>

                <!-- Main Features -->
                <Label styleClass="h2" text="Main Features"/>
                <GridPane hgap="20.0" vgap="20.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" percentWidth="50.0"/>
                    </columnConstraints>

                    <children>
                        <!-- Feature: Advanced XML Editor -->
                        <VBox styleClass="feature-box" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <FontIcon iconColor="#4f46e5" iconLiteral="bi-file-earmark-code" iconSize="24"/>
                                    <Label styleClass="h3" text="Advanced XML Editor"/>
                                </HBox>
                                <Label text="Professional XML editing with IntelliSense auto-completion, XSD-aware suggestions, syntax highlighting, instant validation, and smart formatting."
                                       wrapText="true"/>
                            </children>
                        </VBox>

                        <!-- Feature: XSD Documentation -->
                        <VBox styleClass="feature-box" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <FontIcon iconColor="#16a34a" iconLiteral="bi-book" iconSize="24"/>
                                    <Label styleClass="h3" text="XSD Documentation Generator"/>
                                </HBox>
                                <Label text="Generate comprehensive HTML documentation from XSD schemas with interactive diagrams, element relationships, and detailed type information."
                                       wrapText="true"/>
                            </children>
                        </VBox>

                        <!-- Feature: XPath & XQuery -->
                        <VBox styleClass="feature-box" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <FontIcon iconColor="#ca8a04" iconLiteral="bi-search" iconSize="24"/>
                                    <Label styleClass="h3" text="XPath &amp; XQuery Engine"/>
                                </HBox>
                                <Label text="Execute XPath expressions and XQuery statements with Saxon HE support, real-time results preview, and advanced query debugging capabilities."
                                       wrapText="true"/>
                            </children>
                        </VBox>

                        <!-- Schema Validation -->
                        <VBox styleClass="feature-box" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <FontIcon iconColor="#be185d" iconLiteral="bi-shield-check" iconSize="24"/>
                                    <Label styleClass="h3" text="Multi-Schema Validation"/>
                                </HBox>
                                <Label text="Validate XML against XSD schemas and Schematron rules with detailed error reporting, line-by-line feedback, and validation rule customization."
                                       wrapText="true"/>
                            </children>
                        </VBox>

                        <!-- XSLT Transformation -->
                        <VBox styleClass="feature-box" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="2">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <FontIcon iconColor="#0284c7" iconLiteral="bi-arrow-repeat" iconSize="24"/>
                                    <Label styleClass="h3" text="XSLT 3.0 Transformation"/>
                                </HBox>
                                <Label text="Transform XML documents with XSLT 3.0 support, live preview, multiple output formats, and integrated development environment for stylesheets."
                                       wrapText="true"/>
                            </children>
                        </VBox>

                        <!-- FOP Processing -->
                        <VBox styleClass="feature-box" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <FontIcon iconColor="#ea580c" iconLiteral="bi-file-earmark-text" iconSize="24"/>
                                    <Label styleClass="h3" text="PDF Generation"/>
                                </HBox>
                                <Label text="Create professional PDF documents from XML using Apache FOP with XSL-FO stylesheets, custom formatting, and embedded graphics support."
                                       wrapText="true"/>
                            </children>
                        </VBox>

                        <!-- XML Digital Signature -->
                        <VBox styleClass="feature-box" spacing="10.0" GridPane.columnIndex="0" GridPane.rowIndex="3">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <FontIcon iconColor="#7e22ce" iconLiteral="bi-patch-check-fill" iconSize="24"/>
                                    <Label styleClass="h3" text="XML Digital Signature"/>
                                </HBox>
                                <Label text="Sign and verify XML documents using XML-DSig standards with certificate management, signature validation, and cryptographic security features."
                                       wrapText="true"/>
                            </children>
                        </VBox>

                        <!-- Template System -->
                        <VBox styleClass="feature-box" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <FontIcon iconColor="#059669" iconLiteral="bi-files" iconSize="24"/>
                                    <Label styleClass="h3" text="Smart Template System"/>
                                </HBox>
                                <Label text="Create and manage reusable XML templates with parameter substitution, validation rules, and quick generation of structured documents."
                                       wrapText="true"/>
                            </children>
                        </VBox>
                    </children>
                </GridPane>
                <Separator/>

                <!-- Settings Area -->
                <VBox spacing="10.0">
                    <children>
                        <Label styleClass="h3" text="Settings"/>
                        <HBox alignment="CENTER_LEFT" spacing="5.0">
                            <children>
                                <Label text="Send usage statistics:"/>
                                <CheckBox fx:id="sendUsageStatistics" mnemonicParsing="false"/>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                            <children>
                                <Label text="Local Cache:"/>
                                <Button mnemonicParsing="false" text="Clear Cache"/>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </VBox>
    </children>
</AnchorPane>