<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import org.kordamp.ikonli.javafx.StackedFontIcon?>
<AnchorPane prefHeight="800" prefWidth="1204" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
            AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" xmlns="http://javafx.com/javafx/11.0.14-internal"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.fxt.freexmltoolkit.controller.WelcomeController">
    <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <Label text="Welcome to FreeXmlToolkit!">
            <font>
                <Font name="Varela Round" size="40.0"/>
            </font>
            <VBox.margin>
                <Insets top="20.0"/>
            </VBox.margin>
        </Label>
        <Label>Your are using version {version}.</Label>
        <HBox fx:id="versionUpdate">
            <Label>There is an update available! Please check here:</Label>
            <Hyperlink onAction="#openUpdatePage" text="FreeXMLToolkit"/>
        </HBox>

        <Label fx:id="duration">You have already used this application for {duration}</Label>
        <HBox spacing="20"
              style="-fx-border-color: black; -fx-border-style: solid; -fx-border-width: 1px; -fx-background-color: grey;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>
            <VBox>
                <Text>Did you know....</Text>
                <StackedFontIcon alignment="CENTER_LEFT" iconSize="48" GridPane.columnIndex="0" GridPane.rowIndex="0">
                    <FontIcon iconColor="#1b1b4b" iconLiteral="bi-question-square"/>
                </StackedFontIcon>
            </VBox>
            <VBox alignment="CENTER_LEFT">
                <Text>You can customize the application by using your own CSS</Text>
            </VBox>
        </HBox>

        <HBox spacing="5.0">
            <Label>Send Usage Statistics:</Label>
            <CheckBox fx:id="sendUsageStatistics" mnemonicParsing="false"/>
        </HBox>

        <Label>xxx Items in cache...</Label>
        <Button text="delete cache"/>

        <Label>Settings...</Label>
        <padding>
            <Insets bottom="100.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </VBox>
</AnchorPane>
