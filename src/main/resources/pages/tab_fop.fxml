            </padding>

            <Text id="welcome-text" style="-fx-font: 24 arial;" text="FOP" wrappingWidth="293.82421875"
                  GridPane.columnSpan="3" GridPane.rowIndex="0"/>

            <Label text="XML File" GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <Button text="XML" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField text="Filename..." GridPane.columnIndex="2" GridPane.rowIndex="1" />

            <Label text="XSLT File" GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <Button text="XSLT" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <TextField text="Filename..." GridPane.columnIndex="2" GridPane.rowIndex="2" />

            <Label text="PDF Output" GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <Button text="PDF" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <TextField text="Filename..." GridPane.columnIndex="2" GridPane.rowIndex="3" />

            <Label text="FO Output" GridPane.columnIndex="0" GridPane.rowIndex="4" />
            <Button text="FO" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <TextField text="Filename..." GridPane.columnIndex="2" GridPane.rowIndex="4" />

            <Button text="Options" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
            <Button fx:id="startConversion" onAction="#buttonConversion"  text="Go" GridPane.columnIndex="0" GridPane.rowIndex="7"/>

            <columnConstraints>
                <ColumnConstraints/>
                <ColumnConstraints/>
                <ColumnConstraints/>
                <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints/>
                <RowConstraints minHeight="10.0" prefHeight="30.0"/>
            </rowConstraints>
        </GridPane>

    </VBox>
</AnchorPane>
