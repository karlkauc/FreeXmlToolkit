<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.*?>
<VBox xmlns="http://javafx.com/javafx/11.0.14-internal"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.fxt.freexmltoolkit.controller.FopController"
      AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
      AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0"
      stylesheets="@../css/xsd-tab-groups.css">

    <!-- FOP Operations Toolbar -->
    <ToolBar styleClass="xsd-toolbar">
        <!-- File Operations Group -->
        <Button fx:id="openXmlBtn" text="Open XML" contentDisplay="TOP" styleClass="toolbar-button" onAction="#openXmlFile">
            <graphic>
                <FontIcon iconLiteral="bi-file-earmark-code" iconSize="20" iconColor="#007bff" styleClass="toolbar-icon-primary"/>
            </graphic>
            <tooltip>
                <Tooltip text="Open XML File (Ctrl+1)"/>
            </tooltip>
        </Button>

        <Button fx:id="openXslBtn" text="Open XSL" contentDisplay="TOP" styleClass="toolbar-button" onAction="#openXslFile">
            <graphic>
                <FontIcon iconLiteral="bi-file-earmark-text" iconSize="20" iconColor="#007bff" styleClass="toolbar-icon-primary"/>
            </graphic>
            <tooltip>
                <Tooltip text="Open XSL-FO Stylesheet (Ctrl+2)"/>
            </tooltip>
        </Button>

        <Button fx:id="pdfOutBtn" text="PDF Out" contentDisplay="TOP" styleClass="toolbar-button" onAction="#openPdfFile">
            <graphic>
                <FontIcon iconLiteral="bi-file-earmark" iconSize="20" iconColor="#dc3545" styleClass="toolbar-icon-danger"/>
            </graphic>
            <tooltip>
                <Tooltip text="Select Output PDF File (Ctrl+3)"/>
            </tooltip>
        </Button>

        <Separator orientation="VERTICAL"/>

        <!-- Primary Action Group -->
        <Button fx:id="generateBtn" text="Generate" contentDisplay="TOP" styleClass="toolbar-button" onAction="#buttonConversion">
            <graphic>
                <FontIcon iconLiteral="bi-play-circle-fill" iconSize="20" iconColor="#28a745" styleClass="toolbar-icon-success"/>
            </graphic>
            <tooltip>
                <Tooltip text="Generate PDF (F5)"/>
            </tooltip>
        </Button>

        <Separator orientation="VERTICAL"/>

        <!-- Favorites Group -->
        <Button fx:id="addToFavoritesBtn" text="Add Favorite" contentDisplay="TOP" styleClass="toolbar-button">
            <graphic>
                <FontIcon iconLiteral="bi-star" iconSize="20" iconColor="#ffc107" styleClass="toolbar-icon-warning"/>
            </graphic>
            <tooltip>
                <Tooltip text="Add to Favorites (Ctrl+D)"/>
            </tooltip>
        </Button>

        <Button fx:id="toggleFavoritesButton" text="Favorites" contentDisplay="TOP" styleClass="toolbar-button">
            <graphic>
                <FontIcon iconLiteral="bi-star-fill" iconSize="20" iconColor="#ffc107" styleClass="toolbar-icon-warning"/>
            </graphic>
            <tooltip>
                <Tooltip text="Show/Hide Favorites (Ctrl+Shift+D)"/>
            </tooltip>
        </Button>

        <Region HBox.hgrow="ALWAYS"/>

        <!-- Help -->
        <Button fx:id="helpBtn" text="Help" contentDisplay="TOP" styleClass="toolbar-button" onAction="#showHelp">
            <graphic>
                <FontIcon iconLiteral="bi-question-circle" iconSize="20" iconColor="#17a2b8" styleClass="toolbar-icon-info"/>
            </graphic>
            <tooltip>
                <Tooltip text="Help (F1)"/>
            </tooltip>
        </Button>
    </ToolBar>

    <!-- Main Content SplitPane -->
    <SplitPane dividerPositions="0.40" VBox.vgrow="ALWAYS">

        <!-- LINKE SEITE: Wrapped in StackPane for Empty State -->
        <StackPane>
            <!-- Empty State -->
            <VBox fx:id="emptyStatePane" spacing="20" alignment="CENTER" styleClass="empty-state"
                  visible="true" managed="true">
                <FontIcon iconLiteral="bi-file-text" iconSize="64" iconColor="#adb5bd"/>
                <Label text="Ready to Generate PDF" styleClass="empty-state-title"/>
                <Label text="Load XML and XSL-FO files to generate a PDF document" wrapText="true" textAlignment="CENTER"
                       styleClass="empty-state-description" maxWidth="400"/>
                <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="emptyStateOpenXmlButton" text="Open XML File" styleClass="btn-primary">
                        <graphic>
                            <FontIcon iconLiteral="bi-file-earmark-code" iconSize="16" iconColor="white"/>
                        </graphic>
                    </Button>
                    <Button fx:id="emptyStateFavoritesButton" text="Browse Favorites" styleClass="btn-secondary">
                        <graphic>
                            <FontIcon iconLiteral="bi-star-fill" iconSize="16" iconColor="#ffc107"/>
                        </graphic>
                    </Button>
                </HBox>
            </VBox>

            <!-- Main Content (initially hidden) -->
            <ScrollPane fx:id="contentPane" fitToWidth="true" style="-fx-background-color: transparent;"
                        visible="false" managed="false">
                <VBox spacing="20" style="-fx-padding: 20;">

                    <!-- Karte 1: Ein- & Ausgabedateien -->
                    <VBox styleClass="card">
                        <Label styleClass="card-title" text="Input &amp; Output Files"/>
                        <Separator/>
                        <GridPane hgap="10" vgap="10" style="-fx-padding: 15 0 0 0;">
                            <!-- XML File -->
                            <Label text="XML Source File*:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                            <HBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                <TextField fx:id="xmlFileName" editable="false" promptText="Select the source XML file"
                                           HBox.hgrow="ALWAYS"/>
                                <Button onAction="#openXmlFile">
                                    <graphic>
                                        <FontIcon iconLiteral="bi-file-earmark-code" iconSize="16"/>
                                    </graphic>
                                </Button>
                            </HBox>

                            <!-- XSL File -->
                            <Label text="XSL-FO Stylesheet*:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                            <HBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                <TextField fx:id="xslFileName" editable="false"
                                           promptText="Select the XSL-FO stylesheet"
                                           HBox.hgrow="ALWAYS"/>
                                <Button onAction="#openXslFile">
                                    <graphic>
                                        <FontIcon iconColor="#fd7e14" iconLiteral="bi-arrow-repeat"
                                                  iconSize="16"/>
                                    </graphic>
                                </Button>
                            </HBox>

                            <!-- PDF File -->
                            <Label text="Output PDF File*:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                            <HBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                <TextField fx:id="pdfFileName" editable="false"
                                           promptText="Define the output PDF file path" HBox.hgrow="ALWAYS"/>
                                <Button onAction="#openPdfFile">
                                    <graphic>
                                        <FontIcon iconColor="#dc3545" iconLiteral="bi-file-earmark-richtext" iconSize="16"/>
                                    </graphic>
                                </Button>
                            </HBox>

                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>
                        </GridPane>
                    </VBox>

                    <!-- Karte 2: PDF Metadaten -->
                    <VBox styleClass="card">
                        <Label styleClass="card-title" text="PDF Metadata (Optional)"/>
                        <Separator/>
                        <GridPane hgap="10" vgap="10" style="-fx-padding: 15 0 0 0;">
                            <Label text="Author:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                            <TextField fx:id="author" promptText="e.g., Karl Kauc" GridPane.columnIndex="1"
                                       GridPane.rowIndex="0"/>

                            <Label text="Title:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                            <TextField fx:id="title" promptText="e.g., Annual Report" GridPane.columnIndex="1"
                                       GridPane.rowIndex="1"/>

                            <Label text="Keywords:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                            <TextField fx:id="keywords" promptText="e.g., report, finance, xml"
                                       GridPane.columnIndex="1"
                                       GridPane.rowIndex="2"/>

                            <Label text="Producer:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                            <TextField fx:id="producer" promptText="e.g., FreeXMLToolkit" GridPane.columnIndex="1"
                                       GridPane.rowIndex="3"/>

                            <Label text="Creation Date:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                            <TextField fx:id="creationDate" disable="true" promptText="Automatically set"
                                       GridPane.columnIndex="1" GridPane.rowIndex="4"/>

                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>
                        </GridPane>
                    </VBox>

                    <!-- Karte 3: Optionen -->
                    <VBox styleClass="card">
                        <Label styleClass="card-title" text="Options"/>
                        <Separator/>
                        <GridPane hgap="10" vgap="10" style="-fx-padding: 15 0 0 0;">
                            <Label text="FOP Config File:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                            <HBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                                <TextField editable="false" promptText="Optional FOP configuration file"
                                           HBox.hgrow="ALWAYS"/>
                                <Button>
                                    <graphic>
                                        <FontIcon iconLiteral="bi-gear" iconSize="16"/>
                                    </graphic>
                                </Button>
                            </HBox>

                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0"/>
                                <ColumnConstraints hgrow="ALWAYS"/>
                            </columnConstraints>
                        </GridPane>
                    </VBox>

                    <!-- Progress Indicator -->
                    <ProgressIndicator fx:id="progressIndicator" maxWidth="Infinity" progress="0.0"
                                       visible="false"/>

                </VBox>
            </ScrollPane>
        </StackPane>

        <!-- RECHTE SEITE: Der PDF-Viewer + Favorites -->
        <SplitPane fx:id="rightSplitPane" orientation="HORIZONTAL" dividerPositions="0.75">
            <AnchorPane>
                <VBox style="-fx-background-color: #525252;" alignment="TOP_CENTER" AnchorPane.bottomAnchor="0.0"
                      AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <Label text="PDF Preview" style="-fx-font-size: 1.5em; -fx-text-fill: white; -fx-padding: 10;"/>
                <Separator/>
                <ScrollPane fx:id="pdfScrollPane" fitToWidth="true" VBox.vgrow="ALWAYS">
                    <VBox fx:id="pdfViewContainer" alignment="CENTER" spacing="5"
                          style="-fx-background-color: #525252;">
                        <padding>
                            <Insets top="10"/>
                        </padding>
                    </VBox>
                </ScrollPane>
            </VBox>
            </AnchorPane>

            <!-- Favorites Panel (unified component) -->
            <fx:include fx:id="favoritesPanel" source="controls/FavoritesPanel.fxml"/>
        </SplitPane>

    </SplitPane>

</VBox>