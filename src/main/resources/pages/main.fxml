<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<VBox fx:id="mainBox" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.fxt.freexmltoolkit.controller.MainController">
    <HBox VBox.vgrow="NEVER">
        <ToolBar HBox.hgrow="ALWAYS">
            <Button contentDisplay="GRAPHIC_ONLY" text="New">
                <graphic>
                    <ImageView fitHeight="16" preserveRatio="true">
                        <Image url="@../img/icons8-datei-24.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button contentDisplay="GRAPHIC_ONLY" text="Save">
                <graphic>
                    <ImageView fitHeight="16" preserveRatio="true">
                        <Image url="@../img/icons8-speichern-50.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button onAction="#openFile" text="Open">
                <graphic>
                    <ImageView fitHeight="16" preserveRatio="true">
                        <Image url="@../img/icons8-geÃ¶ffnete-datei-unter-cursor-48.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="prettyPrint" text="pretty print">
                <graphic>
                    <ImageView fitHeight="16" preserveRatio="true">
                        <Image url="@../img/icons8-align_center.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </ToolBar>
        <ToolBar HBox.hgrow="NEVER">
            <Button onAction="#openSetting" text="Settings">
                <graphic>
                    <FontIcon iconLiteral="bi-gear-fill" iconSize="16"/>
                </graphic>
            </Button>

            <Button onAction="#openHelpPage" text="Help">
                <graphic>
                    <FontIcon iconLiteral="bi-question-square" iconSize="16" iconColor="coral"/>
                </graphic>
            </Button>
            <Button fx:id="about" onAction="#pressAboutButton" text="About"/>

            <Button fx:id="exit" text="Exit">
                <graphic>
                    <ImageView fitHeight="16" preserveRatio="true">
                        <Image url="@../img/icons8-exit-64.png"/>
                    </ImageView>
                </graphic>
            </Button>
        </ToolBar>
    </HBox>

    <TabPane VBox.vgrow="ALWAYS">
        <Tab fx:id="tabPaneXsdValidation" closable="false" text="XSD Validation">
            <graphic>
                <ImageView fitHeight="16" preserveRatio="true">
                    <Image url="@../img/icons8-daten-angekommen-32.png"/>
                </ImageView>
            </graphic>
            <fx:include source="tab_validation.fxml" AnchorPane.bottomAnchor="0" AnchorPane.topAnchor="0"
                        fx:id="xsdValidation"/>
        </Tab>
        <Tab fx:id="tabPaneXslt" closable="false" text="XSLT">
            <graphic>
                <ImageView fitHeight="16" preserveRatio="true">
                    <Image url="@../img/icons8-transform-64.png"/>
                </ImageView>
            </graphic>
            <fx:include source="tab_xslt.fxml" AnchorPane.bottomAnchor="0" AnchorPane.topAnchor="0" fx:id="xslt"/>
        </Tab>
        <Tab fx:id="tabPaneXml" closable="false" text="XML">
            <graphic>
                <ImageView fitHeight="16" preserveRatio="true">
                    <Image url="@../img/icons8-xml-64.png"/>
                </ImageView>
            </graphic>
            <fx:include source="tab_xml.fxml" AnchorPane.bottomAnchor="0" AnchorPane.topAnchor="0" fx:id="xml"/>
        </Tab>
        <Tab closable="false" text="XSD">
            <graphic>
                <ImageView fitHeight="16" preserveRatio="true">
                    <Image url="@../img/icons8-middle-column-rectangular-bar-with-side-strips-24.png"/>
                </ImageView>
            </graphic>
            <fx:include source="tab_xsd.fxml" AnchorPane.bottomAnchor="0" AnchorPane.topAnchor="0" fx:id="xsd"/>
        </Tab>
        <Tab closable="false" text="FOP">
            <graphic>
                <ImageView fitHeight="16" preserveRatio="true">
                    <Image url="@../img/icons8-pdf-16.png"/>
                </ImageView>
            </graphic>
            <fx:include fx:id="fop" source="tab_fop.fxml" AnchorPane.bottomAnchor="0" AnchorPane.topAnchor="0"/>
        </Tab>
        <Tab closable="false" text="Signature">
            <graphic>
                <ImageView fitHeight="16" preserveRatio="true">
                    <Image url="@../img/signature.png"/>
                </ImageView>
            </graphic>
            <fx:include fx:id="signature" source="tab_signature.fxml" AnchorPane.bottomAnchor="0"
                        AnchorPane.topAnchor="0"/>
        </Tab>
    </TabPane>
</VBox>
