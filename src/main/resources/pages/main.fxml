<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.*?>
<VBox xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
      stylesheets="/css/mainTheme.css"
      fx:controller="org.fxt.freexmltoolkit.controller.MainController">
    <MenuBar>
        <Menu text="File">
            <MenuItem text="New XML File"/>
            <MenuItem text="New XSLT FIle"/>
            <MenuItem text="New XSD FIle"/>
            <MenuItem text="New FO FIle"/>
            <SeparatorMenuItem/>
            <MenuItem text="Exit"/>
        </Menu>
        <Menu text="Settings">
            <MenuItem text="2223"/>
        </Menu>
    </MenuBar>

    <AnchorPane prefHeight="800.0" prefWidth="1400.0" VBox.vgrow="ALWAYS">
        <BorderPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                    AnchorPane.topAnchor="0">
            <top>
            </top>
            <bottom>
                <HBox styleClass="bottom_line" BorderPane.alignment="CENTER">
                    <VBox alignment="CENTER_LEFT">
                        <Label fx:id="version" contentDisplay="CENTER" text="Version">
                            <font>
                                <Font size="10.0"/>
                            </font>
                            <opaqueInsets>
                                <Insets/>
                            </opaqueInsets>
                            <VBox.margin>
                                <Insets left="10.0"/>
                            </VBox.margin>
                        </Label>
                    </VBox>
                </HBox>
            </bottom>
            <left>
                <VBox styleClass="menu_box" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0">
                    <BorderPane VBox.vgrow="ALWAYS">
                        <top>
                            <VBox BorderPane.alignment="CENTER">
                                <Button fx:id="xslt" onAction="#loadPage" mnemonicParsing="false" text="XSLT"
                                        VBox.vgrow="ALWAYS" styleClass="menu_button">
                                    <graphic>
                                        <FontIcon iconLiteral="fth-git-pull-request" iconSize="16" iconColor="#e27429"/>
                                    </graphic>
                                </Button>
                                <Button onAction="#loadPage" fx:id="xml" mnemonicParsing="false" text="XML"
                                        styleClass="menu_button">
                                    <graphic>
                                        <FontIcon iconLiteral="bi-code-slash" iconSize="16"/>
                                    </graphic>
                                </Button>
                                <Button fx:id="xsd" onAction="#loadPage" text="XSD" VBox.vgrow="ALWAYS"
                                        styleClass="menu_button">
                                    <graphic>
                                        <FontIcon iconLiteral="bi-diagram-3" iconSize="16" iconColor="dodgerblue"/>
                                    </graphic>
                                </Button>
                                <Button fx:id="xsdValidation" onAction="#loadPage" mnemonicParsing="false"
                                        text="XSD Validation" VBox.vgrow="ALWAYS"
                                        styleClass="menu_button">
                                    <graphic>
                                        <FontIcon iconLiteral="bi-clipboard-check" iconSize="16"/>
                                    </graphic>
                                </Button>

                                <Button fx:id="fop" onAction="#loadPage" mnemonicParsing="false" text="FOP"
                                        VBox.vgrow="ALWAYS" styleClass="menu_button">
                                    <graphic>
                                        <ImageView fitHeight="16" preserveRatio="true">
                                            <Image url="/img/icons8-pdf-16.png"/>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="signature" onAction="#loadPage" mnemonicParsing="false" text="Signature"
                                        VBox.vgrow="ALWAYS"
                                        styleClass="menu_button">
                                    <graphic>
                                        <FontIcon iconLiteral="win10-key" iconSize="16" iconColor="#578013"/>
                                    </graphic>
                                </Button>
                                <Button fx:id="schematron" onAction="#loadPage" mnemonicParsing="false"
                                        text="Schematron"
                                        VBox.vgrow="ALWAYS"
                                        styleClass="menu_button">
                                    <graphic>
                                        <ImageView fitHeight="16" preserveRatio="true">
                                            <Image url="/img/schematron.jpeg"/>
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </VBox>
                        </top>
                        <bottom>
                            <VBox>
                                <Button fx:id="help" onAction="#loadPage" mnemonicParsing="false" text="Help"
                                        VBox.vgrow="ALWAYS" styleClass="menu_button">
                                    <graphic>
                                        <FontIcon iconLiteral="bi-question-square" iconSize="16" iconColor="#5151e8"/>
                                    </graphic>
                                </Button>
                                <Button fx:id="settings" onAction="#loadPage" mnemonicParsing="false" text="Settings"
                                        VBox.vgrow="ALWAYS"
                                        styleClass="menu_button">
                                    <graphic>
                                        <FontIcon iconLiteral="bi-gear-fill" iconSize="16"/>
                                    </graphic>
                                </Button>
                                <Button fx:id="exit" text="Exit" VBox.vgrow="ALWAYS" styleClass="menu_button">
                                    <graphic>
                                        <FontIcon iconLiteral="bi-door-closed" iconSize="16" iconColor="darkslategray"/>
                                    </graphic>
                                </Button>
                            </VBox>
                        </bottom>
                    </BorderPane>
                </VBox>
            </left>
            <center>
                <AnchorPane fx:id="contentPane"
                            AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
                            AnchorPane.bottomAnchor="0" AnchorPane.topAnchor="0"/>
            </center>
        </BorderPane>
    </AnchorPane>
</VBox>
