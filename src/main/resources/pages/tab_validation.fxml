<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<AnchorPane fx:id="anchorPane" style="-fx-padding: 0;" stylesheets="@../css/app.css"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.fxt.freexmltoolkit.controller.XsdValidationController">
    <GridPane fx:id="auswertung" hgap="10" vgap="10">
        <padding>
            <Insets bottom="25" left="25" right="25" top="25"/>
        </padding>

        <Text id="welcome-text" style="-fx-font: 24 arial;" text="Schema Validation Report" wrappingWidth="293.82421875"
              GridPane.columnSpan="3" GridPane.rowIndex="0"/>

        <Label text="XML File:" GridPane.rowIndex="1"/>
        <Button mnemonicParsing="false" text="Load File" GridPane.columnIndex="1" GridPane.rowIndex="1"
                GridPane.vgrow="ALWAYS" fx:id="xmlLoadButton">
            <graphic>
                <ImageView fitHeight="20" fitWidth="20">
                    <Image url="@../img/icons8-xml-64.png"/>
                </ImageView>
            </graphic>
        </Button>
        <TextField GridPane.columnIndex="2" GridPane.rowIndex="1" fx:id="xmlFileName"/>

        <Label text="XSD File:" GridPane.rowIndex="2"/>
        <Button mnemonicParsing="false" text="Load File" GridPane.columnIndex="1" GridPane.rowIndex="2"
                fx:id="xsdLoadButton">
            <graphic>
                <ImageView fitHeight="20" fitWidth="20">
                    <Image url="@../img/icons8-daten-angekommen-32.png"/>
                </ImageView>
            </graphic>
        </Button>
        <TextField prefWidth="500" GridPane.columnIndex="2" GridPane.rowIndex="2" fx:id="xsdFileName"/>

        <Label text="is XML File Schema Valid:" GridPane.rowIndex="3"/>
        <TextField fx:id="schemaValid" GridPane.columnIndex="2" GridPane.rowIndex="3"/>

        <Label text="Details:" GridPane.rowIndex="4"/>
        <TextArea fx:id="errorList" GridPane.columnIndex="2" GridPane.rowIndex="4"/>

        <Button onAction="#reload" text="Reload" GridPane.rowIndex="5">
            <graphic>
                <ImageView fitHeight="20" fitWidth="20">
                    <Image url="@../img/icons8-aktualisieren-48.png"/>
                </ImageView>
            </graphic>
        </Button>
        <columnConstraints>
            <ColumnConstraints/>
            <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
        </rowConstraints>

    </GridPane>
</AnchorPane>
