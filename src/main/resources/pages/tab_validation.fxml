<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import org.fxt.freexmltoolkit.controls.FileLoader?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.fxt.freexmltoolkit.controller.XsdValidationController">
    <HBox AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <BorderPane prefWidth="300" style="-fx-padding: 5 5 5 5;" HBox.hgrow="SOMETIMES" fx:id="borderPane">
            <top>
                <VBox HBox.hgrow="ALWAYS" style="-fx-background-color: red">
                    <FileLoader fx:id="xmlFileLoader" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS"/>
                    <Separator/>
                    <FileLoader fx:id="xsdFileLoader"/>
                    <Separator/>
                    <Button text="Reload" fx:id="reload" onAction="#reload">
                        <graphic>
                            <ImageView fitHeight="20" fitWidth="20">
                                <Image url="@../img/icons8-aktualisieren-48.png"/>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button text="TEST" onAction="#test"/>
                </VBox>
            </top>
            <bottom>
                <ProgressBar fx:id="progressBar" prefWidth="300" visible="false"/>
            </bottom>
        </BorderPane>
        <HBox style="-fx-background-color: yellow" prefWidth="20">
            <Button onAction="#toggleBorderPane" text="--" style="-fx-font-size: 7px;" fx:id="toggleButton"/>
        </HBox>
        <GridPane fx:id="auswertung" style="-fx-background-color: blue;" HBox.hgrow="NEVER"/>
    </HBox>
</AnchorPane>

