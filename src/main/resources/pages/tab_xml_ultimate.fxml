<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<?import org.kordamp.ikonli.javafx.*?>
<VBox prefHeight="768.0" prefWidth="1024.0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
      AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0" xmlns="http://javafx.com/javafx/11.0.14-internal"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.fxt.freexmltoolkit.controller.XmlUltimateController"
      stylesheets="@../css/xsd-tab-groups.css">

    <!-- Ultimate XML Editor Toolbar - Modernized with unified theme -->
    <ToolBar styleClass="xsd-toolbar">
        <!-- File Operations Group -->
        <Button fx:id="newFile" text="New" contentDisplay="TOP" styleClass="toolbar-button" onAction="#newFilePressed">
            <graphic>
                <FontIcon iconLiteral="bi-file-earmark-plus" iconSize="20" iconColor="#28a745"/>
            </graphic>
            <tooltip>
                <Tooltip text="New XML Document (Ctrl+N)"/>
            </tooltip>
        </Button>

        <Button fx:id="openFile" text="Open" contentDisplay="TOP" styleClass="toolbar-button" onAction="#openFile">
            <graphic>
                <FontIcon iconLiteral="bi-folder2-open" iconSize="20" iconColor="#007bff"/>
            </graphic>
            <tooltip>
                <Tooltip text="Open XML Document (Ctrl+O)"/>
            </tooltip>
        </Button>

        <Button fx:id="saveFile" text="Save" contentDisplay="TOP" styleClass="toolbar-button" onAction="#saveFile">
            <graphic>
                <FontIcon iconLiteral="bi-save" iconSize="20" iconColor="#17a2b8"/>
            </graphic>
            <tooltip>
                <Tooltip text="Save Document (Ctrl+S)"/>
            </tooltip>
        </Button>

        <Button fx:id="saveAsFile" text="Save As" contentDisplay="TOP" styleClass="toolbar-button" onAction="#saveAsFile">
            <graphic>
                <FontIcon iconLiteral="bi-save-fill" iconSize="20" iconColor="#17a2b8"/>
            </graphic>
            <tooltip>
                <Tooltip text="Save As... (Ctrl+Shift+S)"/>
            </tooltip>
        </Button>

        <Separator orientation="VERTICAL"/>

        <!-- Favorites Group -->
        <Button fx:id="addToFavoritesButton" text="Add Fav" contentDisplay="TOP" styleClass="toolbar-button" onAction="#addCurrentFileToFavorites">
            <graphic>
                <FontIcon iconLiteral="bi-star" iconSize="20" iconColor="#ffc107"/>
            </graphic>
            <tooltip>
                <Tooltip text="Add to Favorites"/>
            </tooltip>
        </Button>

        <ToggleButton fx:id="toggleFavoritesButton" text="Favorites" contentDisplay="TOP" styleClass="toolbar-button" onAction="#toggleFavoritesPanel">
            <graphic>
                <FontIcon iconLiteral="bi-star-fill" iconSize="20" iconColor="#ffc107"/>
            </graphic>
            <tooltip>
                <Tooltip text="Toggle Favorites Panel"/>
            </tooltip>
        </ToggleButton>

        <Separator orientation="VERTICAL"/>

        <!-- Format Operations Group -->
        <Button fx:id="prettyPrint" text="Format" contentDisplay="TOP" styleClass="toolbar-button" onAction="#prettifyingXmlText">
            <graphic>
                <FontIcon iconLiteral="bi-code-square" iconSize="20" iconColor="#20c997"/>
            </graphic>
            <tooltip>
                <Tooltip text="Format XML (Ctrl+Alt+F)"/>
            </tooltip>
        </Button>

        <Separator orientation="VERTICAL"/>

        <!-- Validation Group -->
        <Button fx:id="validateButton" text="Validate" contentDisplay="TOP" styleClass="toolbar-button" onAction="#validateXml">
            <graphic>
                <FontIcon iconLiteral="bi-check-circle" iconSize="20" iconColor="#28a745"/>
            </graphic>
            <tooltip>
                <Tooltip text="Validate XML (Ctrl+Shift+V)"/>
            </tooltip>
        </Button>

        <Button fx:id="xmlExcelCsvConverterButton" text="Convert" contentDisplay="TOP" styleClass="toolbar-button" onAction="#showXmlExcelCsvConverter">
            <graphic>
                <FontIcon iconLiteral="bi-table" iconSize="20" iconColor="#6f42c1"/>
            </graphic>
            <tooltip>
                <Tooltip text="XML â†” Excel/CSV Converter"/>
            </tooltip>
        </Button>

        <Separator orientation="VERTICAL"/>

        <!-- Query & Analysis Group -->
        <Button fx:id="runXpathQuery" text="Query" contentDisplay="TOP" styleClass="toolbar-button" onAction="#runXpathQueryPressed">
            <graphic>
                <FontIcon iconLiteral="bi-code-slash" iconSize="20" iconColor="#6f42c1"/>
            </graphic>
            <tooltip>
                <Tooltip text="Run XPath/XQuery"/>
            </tooltip>
        </Button>

        <Separator orientation="VERTICAL"/>

        <!-- Revolutionary Features Group -->
        <Button fx:id="templateManagerButton" text="Templates" contentDisplay="TOP" styleClass="toolbar-button" onAction="#showTemplateManager">
            <graphic>
                <FontIcon iconLiteral="bi-file-text" iconSize="20" iconColor="#28a745"/>
            </graphic>
            <tooltip>
                <Tooltip text="Smart Templates System"/>
            </tooltip>
        </Button>

        <Button fx:id="schemaGeneratorButton" text="Generator" contentDisplay="TOP" styleClass="toolbar-button" onAction="#showSchemaGenerator">
            <graphic>
                <FontIcon iconLiteral="bi-diagram-3" iconSize="20" iconColor="#007bff"/>
            </graphic>
            <tooltip>
                <Tooltip text="Intelligent Schema Generator"/>
            </tooltip>
        </Button>

        <Button fx:id="xsltDeveloperButton" text="XSLT Dev" contentDisplay="TOP" styleClass="toolbar-button" onAction="#showXsltDeveloper">
            <graphic>
                <FontIcon iconLiteral="bi-arrow-repeat" iconSize="20" iconColor="#20c997"/>
            </graphic>
            <tooltip>
                <Tooltip text="Advanced XSLT Developer"/>
            </tooltip>
        </Button>

        <Separator orientation="VERTICAL"/>

        <Region HBox.hgrow="ALWAYS"/>

        <!-- Help -->
        <Button text="Help" contentDisplay="TOP" styleClass="toolbar-button" onAction="#showHelp">
            <graphic>
                <FontIcon iconLiteral="bi-question-circle" iconSize="20" iconColor="#17a2b8"/>
            </graphic>
            <tooltip>
                <Tooltip text="Help (F1)"/>
            </tooltip>
        </Button>

    </ToolBar>

    <!-- NEW: SplitPane to make the editor and development panes resizable -->
    <SplitPane fx:id="mainSplitPane" orientation="VERTICAL" VBox.vgrow="ALWAYS" dividerPositions="0.75">
        <!-- Main Content Area with Horizontal Split for Favorites Panel -->
        <SplitPane fx:id="horizontalSplitPane" orientation="HORIZONTAL" dividerPositions="0.75">
            <!-- Main Editor Tabs -->
            <TabPane fx:id="xmlFilesPane" side="TOP"
                     styleClass="xml-editor-tabs" minHeight="300"/>

            <!-- Favorites Panel Sidebar -->
            <fx:include fx:id="favoritesPanel" source="controls/FavoritesPanel.fxml"/>
        </SplitPane>

        <!-- Advanced Development Panels - Bottom Tabs -->
        <TabPane fx:id="developmentTabPane" side="BOTTOM" tabClosingPolicy="SELECTED_TAB" prefHeight="180" minHeight="150">
            <!-- XPath/XQuery Panel -->
            <Tab fx:id="xPathQueryTab" text="XPath / XQuery" closable="false">
                <VBox spacing="10" style="-fx-padding: 10;" minHeight="120">
                    <!-- Query Controls Bar -->
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button fx:id="executeQueryButton" onAction="#runXpathQueryPressed"
                                text="Execute Query" prefWidth="140"
                                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;">
                            <graphic>
                                <FontIcon iconColor="white" iconLiteral="bi-play-circle-fill" iconSize="18"/>
                            </graphic>
                        </Button>
                        <Button fx:id="clearQueryButton" onAction="#clearXpathQuery" text="Clear Query" prefWidth="120">
                            <graphic>
                                <FontIcon iconColor="#6c757d" iconLiteral="bi-eraser" iconSize="16"/>
                            </graphic>
                        </Button>
                        <Button onAction="#reloadXmlText" text="Reset Result" prefWidth="120">
                            <graphic>
                                <FontIcon iconColor="#dc3545" iconLiteral="bi-arrow-counterclockwise" iconSize="16"/>
                            </graphic>
                        </Button>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label text="Status:" style="-fx-font-weight: bold;"/>
                        <Label fx:id="queryResultLabel" text="Ready" style="-fx-text-fill: #6c757d;"/>
                    </HBox>

                    <Separator/>

                    <!-- Query Input Area -->
                    <TabPane fx:id="xPathQueryPane" tabClosingPolicy="UNAVAILABLE" side="TOP" VBox.vgrow="ALWAYS"
                             minHeight="100">
                        <Tab fx:id="xPathTab" text="XPath">
                            <VBox spacing="5" style="-fx-padding: 8;">
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Label text="XPath Expression:" style="-fx-font-weight: bold;"/>
                                    <Region HBox.hgrow="ALWAYS"/>
                                    <MenuButton text="Examples" style="-fx-font-size: 11px;">
                                        <items>
                                            <MenuItem text="//node - Select all nodes" onAction="#insertXPathExample1"/>
                                            <MenuItem text="/root/child[@attr='value']" onAction="#insertXPathExample2"/>
                                            <MenuItem text="//text() - All text nodes" onAction="#insertXPathExample3"/>
                                            <MenuItem text="count(//element)" onAction="#insertXPathExample4"/>
                                        </items>
                                    </MenuButton>
                                </HBox>
                                <StackPane fx:id="stackPaneXPath" VBox.vgrow="ALWAYS" minHeight="80"
                                           style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-border-radius: 3; -fx-background-color: white;"/>
                            </VBox>
                        </Tab>
                        <Tab fx:id="xQueryTab" text="XQuery">
                            <VBox spacing="5" style="-fx-padding: 8;">
                                <HBox spacing="10" alignment="CENTER_LEFT">
                                    <Label text="XQuery Expression:" style="-fx-font-weight: bold;"/>
                                    <Region HBox.hgrow="ALWAYS"/>
                                    <MenuButton text="Examples" style="-fx-font-size: 11px;">
                                        <items>
                                            <MenuItem text="for $x in //item return $x" onAction="#insertXQueryExample1"/>
                                            <MenuItem text="for $x in //item where $x/@id='1' return $x/name"
                                                      onAction="#insertXQueryExample2"/>
                                        </items>
                                    </MenuButton>
                                </HBox>
                                <StackPane fx:id="stackPaneXQuery" VBox.vgrow="ALWAYS" minHeight="80"
                                           style="-fx-border-color: #cccccc; -fx-border-width: 1; -fx-border-radius: 3; -fx-background-color: white;"/>
                            </VBox>
                        </Tab>
                    </TabPane>
                </VBox>
            </Tab>

            <!-- XSLT Development Panel -->
            <Tab fx:id="xsltDevelopmentTab" text="XSLT Development">
                <SplitPane dividerPositions="0.5" orientation="HORIZONTAL">
                    <!-- Left Side: XML Source and XSLT Stylesheet -->
                    <SplitPane dividerPositions="0.5" orientation="VERTICAL">
                        <!-- XML Source Editor -->
                        <VBox spacing="5">
                            <padding>
                                <Insets top="5" bottom="5" left="5" right="5"/>
                            </padding>
                            <HBox spacing="5" alignment="CENTER_LEFT">
                                <Label text="XML Source:" styleClass="section-label"/>
                                <Button fx:id="loadXmlSourceButton" text="Load" onAction="#loadXmlSourceFile"/>
                                <Button fx:id="saveXmlSourceButton" text="Save" onAction="#saveXmlSourceFile"/>
                            </HBox>
                            <StackPane fx:id="xmlSourceEditorPane" VBox.vgrow="ALWAYS" minHeight="100"/>
                        </VBox>

                        <!-- XSLT Stylesheet Editor -->
                        <VBox spacing="5">
                            <padding>
                                <Insets top="5" bottom="5" left="5" right="5"/>
                            </padding>
                            <HBox spacing="5" alignment="CENTER_LEFT">
                                <Label text="XSLT Stylesheet:" styleClass="section-label"/>
                                <Button fx:id="loadXsltButton" text="Load" onAction="#loadXsltFile"/>
                                <Button fx:id="saveXsltButton" text="Save" onAction="#saveXsltFile"/>
                                <Separator orientation="VERTICAL"/>
                                <Button fx:id="transformButton" text="Transform" onAction="#executeTransformation"
                                        styleClass="btn-primary"/>
                            </HBox>
                            <StackPane fx:id="xsltEditorPane" VBox.vgrow="ALWAYS" minHeight="100"/>
                        </VBox>
                    </SplitPane>

                    <!-- Transformation Results -->
                    <VBox spacing="5">
                        <padding>
                            <Insets top="5" bottom="5" left="5" right="5"/>
                        </padding>
                        <HBox spacing="5" alignment="CENTER_LEFT">
                            <Label text="Output:" styleClass="section-label"/>
                            <ComboBox fx:id="outputFormatCombo" prefWidth="80"/>
                            <CheckBox fx:id="livePreviewCheckbox" text="Live Preview"/>
                        </HBox>
                        <TabPane VBox.vgrow="ALWAYS" tabClosingPolicy="UNAVAILABLE">
                            <Tab text="Result">
                                <TextArea fx:id="transformationResultArea" styleClass="code-preview" editable="false"
                                          wrapText="false"/>
                            </Tab>
                            <Tab text="Preview">
                                <WebView fx:id="transformationPreviewWeb"/>
                            </Tab>
                            <Tab text="Performance">
                                <TextArea fx:id="performanceResultArea" styleClass="code-preview" editable="false"
                                          wrapText="true"/>
                            </Tab>
                        </TabPane>
                    </VBox>
                </SplitPane>
            </Tab>

            <!-- Template Development Panel -->
            <Tab fx:id="templateDevelopmentTab" text="Template Development">
                <SplitPane dividerPositions="0.4" orientation="HORIZONTAL">
                    <!-- Template Parameters -->
                    <VBox spacing="5">
                        <padding>
                            <Insets top="5" bottom="5" left="5" right="5"/>
                        </padding>
                        <HBox spacing="5" alignment="CENTER_LEFT">
                            <Label text="Template Parameters:" styleClass="section-label"/>
                            <Button fx:id="addParameterButton" onAction="#addTemplateParameter">
                                <graphic>
                                    <FontIcon iconLiteral="bi-plus-circle" iconSize="12"/>
                                </graphic>
                            </Button>
                        </HBox>
                        <TableView fx:id="templateParametersTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="parameterNameColumn" text="Name" prefWidth="80"/>
                                <TableColumn fx:id="parameterValueColumn" text="Value" prefWidth="100"/>
                                <TableColumn fx:id="parameterTypeColumn" text="Type" prefWidth="60"/>
                            </columns>
                        </TableView>
                        <HBox spacing="5">
                            <Button fx:id="validateParametersButton" text="Validate" onAction="#validateTemplateParameters"
                                    styleClass="btn-warning"/>
                            <Button fx:id="resetParametersButton" text="Reset" onAction="#resetTemplateParameters"
                                    styleClass="btn-secondary"/>
                        </HBox>
                    </VBox>

                    <!-- Template Preview -->
                    <VBox spacing="5">
                        <padding>
                            <Insets top="5" bottom="5" left="5" right="5"/>
                        </padding>
                        <HBox spacing="5" alignment="CENTER_LEFT">
                            <Label text="Generated XML:" styleClass="section-label"/>
                            <Button fx:id="generateTemplateButton" text="Generate" onAction="#generateTemplateXml"
                                    styleClass="btn-success"/>
                            <Button fx:id="insertTemplateButton" text="Insert" onAction="#insertGeneratedTemplate"
                                    styleClass="btn-primary"/>
                        </HBox>
                        <TextArea fx:id="templatePreviewArea" VBox.vgrow="ALWAYS" styleClass="code-preview"
                                  wrapText="false"/>
                    </VBox>
                </SplitPane>
            </Tab>

            <!-- Console Output -->
            <Tab text="Console" closable="false">
                <VBox spacing="5">
                    <padding>
                        <Insets top="5" bottom="5" left="5" right="5"/>
                    </padding>
                    <HBox spacing="5" alignment="CENTER_LEFT">
                        <Label text="Output Console" styleClass="section-label"/>
                        <Button text="Clear" onAction="#clearConsole">
                            <graphic>
                                <FontIcon iconLiteral="bi-trash" iconSize="12"/>
                            </graphic>
                        </Button>
                    </HBox>
                    <TextArea fx:id="consoleOutput" VBox.vgrow="ALWAYS" styleClass="console-output" editable="false"/>
                </VBox>
            </Tab>
        </TabPane>
    </SplitPane>
</VBox>