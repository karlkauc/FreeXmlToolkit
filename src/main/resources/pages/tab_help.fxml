<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>
<?import org.kordamp.ikonli.javafx.*?>
<VBox AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0"
      AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0"
      xmlns="http://javafx.com/javafx/11.0.14-internal"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.fxt.freexmltoolkit.controller.HelpController"
      stylesheets="@../css/xsd-tab-groups.css">

    <!-- Help Toolbar -->
    <ToolBar styleClass="xsd-toolbar">
        <Button text="Home" contentDisplay="TOP" styleClass="toolbar-button">
            <graphic>
                <FontIcon iconLiteral="bi-house" iconSize="20" iconColor="#007bff"/>
            </graphic>
            <tooltip>
                <Tooltip text="Home"/>
            </tooltip>
        </Button>

        <Button text="Back" contentDisplay="TOP" styleClass="toolbar-button">
            <graphic>
                <FontIcon iconLiteral="bi-arrow-left" iconSize="20" iconColor="#6c757d"/>
            </graphic>
            <tooltip>
                <Tooltip text="Back"/>
            </tooltip>
        </Button>

        <Button text="Forward" contentDisplay="TOP" styleClass="toolbar-button">
            <graphic>
                <FontIcon iconLiteral="bi-arrow-right" iconSize="20" iconColor="#6c757d"/>
            </graphic>
            <tooltip>
                <Tooltip text="Forward"/>
            </tooltip>
        </Button>

        <Separator orientation="VERTICAL"/>

        <Button text="Refresh" contentDisplay="TOP" styleClass="toolbar-button">
            <graphic>
                <FontIcon iconLiteral="bi-arrow-clockwise" iconSize="20" iconColor="#6c757d"/>
            </graphic>
            <tooltip>
                <Tooltip text="Refresh"/>
            </tooltip>
        </Button>

        <Region HBox.hgrow="ALWAYS"/>

        <Button text="Help" contentDisplay="TOP" styleClass="toolbar-button">
            <graphic>
                <FontIcon iconLiteral="bi-question-circle" iconSize="20" iconColor="#17a2b8"/>
            </graphic>
            <tooltip>
                <Tooltip text="Help"/>
            </tooltip>
        </Button>
    </ToolBar>

    <!-- Documentation Tabs -->
    <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
        <Tab text="FreeXmlToolkit Documentation" fx:id="tabFXTDoc" styleClass="primary-tab">
            <graphic>
                <FontIcon iconLiteral="bi-book" iconSize="16"/>
            </graphic>
            <WebView fx:id="viewFXTDoc"/>
        </Tab>
        <Tab text="FundsXML Documentation" fx:id="tabFundsXMlSite" styleClass="primary-tab">
            <graphic>
                <FontIcon iconLiteral="bi-file-text" iconSize="16"/>
            </graphic>
            <WebView fx:id="viewFundsXMLSite"/>
        </Tab>
        <Tab text="Migration Guide" fx:id="tabMigrationGuide" styleClass="utility-tab">
            <graphic>
                <FontIcon iconLiteral="bi-arrow-repeat" iconSize="16"/>
            </graphic>
            <WebView fx:id="viewMigrationGuide"/>
        </Tab>
    </TabPane>

</VBox>
