<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.fxt.freexmltoolkit.controller.dialogs.XsdOverviewDialogController"
            prefWidth="850" prefHeight="650"
            style="-fx-background-color: white;">

    <!-- Header -->
    <top>
        <VBox style="-fx-background-color: linear-gradient(to bottom, #4a90e2, #357abd); -fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="15">
                <FontIcon iconLiteral="bi-diagram-2" iconSize="48" iconColor="white"/>
                <VBox spacing="5">
                    <Label text="Welcome to the XSD Toolkit"
                           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                    <Label text="Powerful tools for XML Schema Definition files"
                           style="-fx-font-size: 14px; -fx-text-fill: rgba(255,255,255,0.9);"/>
                </VBox>
            </HBox>
        </VBox>
    </top>

    <!-- Content -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: white; -fx-border-width: 0;">
            <VBox spacing="25" style="-fx-padding: 30px;">

                <!-- Quick Start Section -->
                <VBox spacing="15" style="-fx-background-color: #f8f9fa; -fx-padding: 20; -fx-background-radius: 8; -fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-border-radius: 8;">
                    <HBox spacing="15" alignment="TOP_LEFT">
                        <FontIcon iconLiteral="bi-star-fill" iconSize="28" iconColor="#ffc107"/>
                        <VBox spacing="12" HBox.hgrow="ALWAYS">
                            <Label text="Quick Start"
                                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                            <Label wrapText="true" text="Get started quickly with your XSD files:"
                                   style="-fx-text-fill: #546e7a;"/>

                            <HBox spacing="12" alignment="CENTER_LEFT">
                                <Button fx:id="newXsdButton" onAction="#handleNewXsd"
                                        style="-fx-font-size: 13px; -fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-background-radius: 4;">
                                    <graphic>
                                        <FontIcon iconLiteral="bi-file-plus" iconColor="white"/>
                                    </graphic>
                                    <text>New XSD File</text>
                                </Button>

                                <Button fx:id="loadFavoritesButton" onAction="#handleLoadFavorites"
                                        style="-fx-font-size: 13px; -fx-background-color: #ffc107; -fx-text-fill: #333; -fx-font-weight: bold; -fx-padding: 8 16; -fx-background-radius: 4;">
                                    <graphic>
                                        <FontIcon iconLiteral="bi-star-fill" iconColor="#333"/>
                                    </graphic>
                                    <text>Load from Favorites</text>
                                </Button>

                                <Button fx:id="browseFilesButton" onAction="#handleBrowseFiles"
                                        style="-fx-font-size: 13px; -fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 16; -fx-background-radius: 4;">
                                    <graphic>
                                        <FontIcon iconLiteral="bi-folder2-open" iconColor="white"/>
                                    </graphic>
                                    <text>Browse Files</text>
                                </Button>
                            </HBox>
                        </VBox>
                    </HBox>
                </VBox>

                <Separator style="-fx-padding: 5 0;"/>

                <!-- Features Overview -->
                <VBox spacing="20">
                    <Label text="Available Features"
                           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                    <!-- PRIMARY EDITING Group -->
                    <VBox spacing="15">
                        <Label text="PRIMARY EDITING"
                               style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #7b1fa2; -fx-padding: 5 0 0 0;"/>

                        <HBox spacing="15" alignment="TOP_LEFT">
                            <FontIcon iconLiteral="bi-diagram-2" iconSize="24" iconColor="#7b1fa2"/>
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Graphic View (Ctrl+1)"
                                       style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                                <Label wrapText="true" text="Visual schema design with interactive editing. Build and modify your XSD structure using our powerful V2 editor."
                                       style="-fx-text-fill: #607d8b;"/>
                            </VBox>
                        </HBox>

                        <HBox spacing="15" alignment="TOP_LEFT">
                            <FontIcon iconLiteral="bi-collection" iconSize="24" iconColor="#7b1fa2"/>
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Type Library (Ctrl+2)"
                                       style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                                <Label wrapText="true" text="Browse all SimpleTypes and ComplexTypes with usage analysis, XPath locations, and professional color-coded indicators."
                                       style="-fx-text-fill: #607d8b;"/>
                            </VBox>
                        </HBox>

                        <HBox spacing="15" alignment="TOP_LEFT">
                            <FontIcon iconLiteral="bi-card-text" iconSize="24" iconColor="#7b1fa2"/>
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Text View (Ctrl+3)"
                                       style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                                <Label wrapText="true" text="Direct source code editing with syntax highlighting and validation."
                                       style="-fx-text-fill: #607d8b;"/>
                            </VBox>
                        </HBox>
                    </VBox>

                    <!-- OUTPUT GENERATION Group -->
                    <VBox spacing="15" style="-fx-padding: 10 0 0 0;">
                        <Label text="OUTPUT GENERATION"
                               style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #2e7d32; -fx-padding: 5 0 0 0;"/>

                        <HBox spacing="15" alignment="TOP_LEFT">
                            <FontIcon iconLiteral="win10-notebook" iconSize="24" iconColor="#2e7d32"/>
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Documentation (Ctrl+4)"
                                       style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                                <Label wrapText="true" text="Generate comprehensive HTML documentation with diagrams (SVG/PNG), type definitions, and examples."
                                       style="-fx-text-fill: #607d8b;"/>
                            </VBox>
                        </HBox>

                        <HBox spacing="15" alignment="TOP_LEFT">
                            <FontIcon iconLiteral="bi-eye" iconSize="24" iconColor="#2e7d32"/>
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Preview (Ctrl+5)"
                                       style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                                <Label wrapText="true" text="Live preview of generated documentation with zoom controls."
                                       style="-fx-text-fill: #607d8b;"/>
                            </VBox>
                        </HBox>

                        <HBox spacing="15" alignment="TOP_LEFT">
                            <FontIcon iconLiteral="bi-keyboard" iconSize="24" iconColor="#2e7d32"/>
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Generate Sample Data (Ctrl+6)"
                                       style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                                <Label wrapText="true" text="Create sample XML data that validates against your schema. Configure mandatory elements and occurrence limits."
                                       style="-fx-text-fill: #607d8b;"/>
                            </VBox>
                        </HBox>
                    </VBox>

                    <!-- UTILITIES Group -->
                    <VBox spacing="15" style="-fx-padding: 10 0 0 0;">
                        <Label text="UTILITIES"
                               style="-fx-font-size: 12px; -fx-font-weight: bold; -fx-text-fill: #1976d2; -fx-padding: 5 0 0 0;"/>

                        <HBox spacing="15" alignment="TOP_LEFT">
                            <FontIcon iconLiteral="bi-layers-half" iconSize="24" iconColor="#1976d2"/>
                            <VBox spacing="5" HBox.hgrow="ALWAYS">
                                <Label text="Flatten Schema (Ctrl+7)"
                                       style="-fx-font-size: 15px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                                <Label wrapText="true" text="Merge XSD file and all includes into a single self-contained file."
                                       style="-fx-text-fill: #607d8b;"/>
                            </VBox>
                        </HBox>
                    </VBox>
                </VBox>

                <!-- Keyboard Shortcuts Info -->
                <VBox spacing="10" style="-fx-background-color: #e3f2fd; -fx-padding: 15; -fx-background-radius: 6; -fx-border-color: #90caf9; -fx-border-width: 1; -fx-border-radius: 6;">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <FontIcon iconLiteral="bi-keyboard" iconSize="20" iconColor="#1976d2"/>
                        <Label text="Keyboard Shortcuts"
                               style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #1565c0;"/>
                    </HBox>
                    <Label wrapText="true" text="Use Ctrl+1 through Ctrl+7 to quickly switch between tabs. Press Ctrl+H or F1 anytime to show this help dialog."
                           style="-fx-text-fill: #1976d2; -fx-font-size: 12px;"/>
                </VBox>

            </VBox>
        </ScrollPane>
    </center>

    <!-- Bottom Action Bar -->
    <bottom>
        <VBox style="-fx-background-color: #f5f5f5; -fx-border-color: #e0e0e0; -fx-border-width: 1 0 0 0; -fx-padding: 15;">
            <HBox spacing="15" alignment="CENTER_LEFT">
                <CheckBox fx:id="dontShowAgainCheckbox" text="Don't show this dialog on startup"
                          style="-fx-font-size: 12px;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="closeButton" text="Get Started" onAction="#handleClose" defaultButton="true"
                        style="-fx-font-size: 13px; -fx-background-color: #4a90e2; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 24; -fx-background-radius: 4;">
                    <graphic>
                        <FontIcon iconLiteral="bi-arrow-right-circle" iconColor="white"/>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
