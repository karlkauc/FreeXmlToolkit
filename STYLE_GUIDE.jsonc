  // ============================================================================
  // COLOR PALETTE
  // ============================================================================
  "colors": {
    // Primary Semantic Colors
    "semantic": {
      "success": "#28a745",    // Green - validation passed, save success
      "info": "#17a2b8",       // Cyan - information, tips
      "warning": "#ffc107",    // Yellow - warnings, caution
      "danger": "#dc3545",     // Red - errors, delete actions
      "primary": "#007bff"     // Blue - primary actions, links
    },

    // Secondary Semantic Colors
    "secondary": {
      "purple": "#6f42c1",     // XPath/XQuery, advanced features
      "indigo": "#6610f2",
      "pink": "#e83e8c",
      "orange": "#fd7e14",     // XSLT, transformation
      "teal": "#20c997",       // Copy, formatting
      "cyan": "#17a2b8"
    },

    // Tab Category Colors (for grouping related functionality)
    "tabs": {
      "primary": {
        "dark": "#9c27b0",         // Purple - primary editing tabs
        "light": "#e1bee7",
        "gradient": "linear-gradient(to bottom, #ba68c8, #9c27b0)"
      },
      "output": {
        "dark": "#43a047",         // Green - output generation tabs
        "light": "#c8e6c9",
        "gradient": "linear-gradient(to bottom, #66bb6a, #43a047)"
      },
      "utility": {
        "dark": "#1e88e5",         // Blue - utility tabs
        "light": "#bbdefb",
        "gradient": "linear-gradient(to bottom, #42a5f5, #1e88e5)"
      }
    },

    // Gray Scale
    "gray": {
      "100": "#f8f9fa",
      "200": "#e9ecef",
      "300": "#dee2e6",
      "400": "#ced4da",
      "500": "#adb5bd",
      "600": "#6c757d",
      "700": "#495057",
      "800": "#343a40",
      "900": "#212529"
    },

    // Light Theme
    "light": {
      "background": {
        "primary": "#ffffff",
        "secondary": "#f8f9fa",
        "tertiary": "#f1f3f5",
        "hover": "rgba(74, 144, 226, 0.1)",
        "active": "rgba(74, 144, 226, 0.2)"
      },
      "text": {
        "primary": "#212529",
        "secondary": "#6c757d",
        "muted": "#adb5bd"
      },
      "border": {
        "light": "#dee2e6",
        "medium": "#ced4da",
        "dark": "#adb5bd",
        "focus": "#4a90e2"
      }
    },

    // Dark Theme (VS Code Dark+ inspired)
    "dark": {
      "background": {
        "primary": "#1e1e1e",
        "secondary": "#252526",
        "tertiary": "#2d2d30",
        "hover": "#2a2d2e",
        "active": "#094771"
      },
      "text": {
        "primary": "#d4d4d4",
        "secondary": "#9d9d9d",
        "muted": "#6a6a6a"
      },
      "border": {
        "light": "#3c3c3c",
        "medium": "#4a4a4a",
        "dark": "#5a5a5a",
        "focus": "#3794ff"
      }
    },

    // XML Syntax Highlighting
    "syntax": {
      "light": {
        "tag": "rgb(0, 0, 255)",         // Blue
        "element": "rgb(128, 0, 0)",      // Maroon
        "attribute": "darkviolet",
        "value": "black",
        "comment": "teal",
        "enumeration": "#ff0000"
      },
      "dark": {
        "tag": "#569cd6",                 // Light blue
        "element": "#4ec9b0",             // Teal
        "attribute": "#9cdcfe",           // Light cyan
        "value": "#ce9178",               // Orange/brown
        "comment": "#6a9955",             // Green
        "enumeration": "#dcdcaa"          // Yellow
      }
    },

    // Application-specific colors
    "application": {
      "menuGradient": "linear-gradient(from 0% 0% to 100% 100%, #fdeec5 0%, #fc9040 100%)",
      "bottomLineGradient": "linear-gradient(from 0% 0% to 100% 100%, #2A9D8F 0%, #264653 100%)",
      "schematron": "#ff6b6b",
      "xslt": "#e27429",
      "fop": "INDIANRED",
      "signature": "#578013"
    }
  },

  // ============================================================================
  // TYPOGRAPHY
  // ============================================================================
  "typography": {
    "fontFamilies": {
      "base": "'Segoe UI', Arial, sans-serif",
      "heading": "Roboto, sans-serif",
      "monospace": "'Courier New', Courier, monospace",
      "code": "'Consolas', 'Monaco', 'Courier New', monospace"
    },

    "fontSizes": {
      "xs": "10px",
      "sm": "11px",
      "base": "12px",
      "md": "13px",
      "lg": "14px",
      "xl": "16px",
      "2xl": "18px",
      "3xl": "24px",
      "4xl": "32px"
    },

    "fontWeights": {
      "light": 300,
      "normal": 400,
      "medium": 500,
      "semibold": 600,
      "bold": 700
    },

    "lineHeights": {
      "tight": 1.2,
      "base": 1.5,
      "relaxed": 1.8
    },

    "headings": {
      "h1": {
        "fontFamily": "Roboto",
        "fontSize": "4em"
      },
      "h2": {
        "fontFamily": "Roboto",
        "fontSize": "1.5em",
        "fontWeight": "bold",
        "padding": "0 0 5px 0"
      },
      "h3": {
        "fontFamily": "Roboto",
        "fontSize": "1.1em",
        "fontWeight": "bold"
      }
    }
  },

  // ============================================================================
  // SPACING SYSTEM
  // ============================================================================
  "spacing": {
    "values": {
      "0": "0",
      "1": "4px",
      "2": "8px",
      "3": "12px",
      "4": "16px",
      "5": "20px",
      "6": "24px",
      "8": "32px",
      "10": "40px"
    },
    "aliases": {
      "xs": "4px",
      "sm": "8px",
      "md": "16px",
      "lg": "20px",
      "xl": "24px"
    }
  },

  // ============================================================================
  // BORDER RADIUS
  // ============================================================================
  "borderRadius": {
    "none": "0",
    "sm": "2px",
    "base": "4px",
    "md": "6px",
    "lg": "8px",
    "xl": "12px",
    "full": "9999px"
  },

  // ============================================================================
  // SHADOWS
  // ============================================================================
  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "base": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
  },

  // ============================================================================
  // ICON SIZES
  // ============================================================================
  "iconSizes": {
    "xs": "10px",
    "sm": "12px",      // Menu items
    "base": "14px",
    "md": "16px",      // Toolbar buttons, FXML default
    "lg": "20px",      // Toolbar icons
    "xl": "24px",      // Feature icons
    "2xl": "32px",     // Dialog icons, headers
