  "metadata": {
    "version": "2.0",
    "framework": "JavaFX 24.0.1",
    "theme": "AtlantaFX Base 2.1.0",
    "icons": "Ikonli Bootstrap Icons",
    "fonts": ["Roboto", "Segoe UI", "Consolas", "Monaco"]
